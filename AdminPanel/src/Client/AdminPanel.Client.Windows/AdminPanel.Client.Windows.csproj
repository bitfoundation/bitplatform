<Project Sdk="Microsoft.NET.Sdk.Razor">

    <PropertyGroup>
        <OutputType>WinExe</OutputType>
        <TargetFramework>net8.0-windows</TargetFramework>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
        <UseWPF>true</UseWPF>
        <UseWindowsForms>true</UseWindowsForms>
        <EnableWindowsTargeting>true</EnableWindowsTargeting>
        <RootNamespace>AdminPanel.Client.Windows</RootNamespace>
        <StartupObject>AdminPanel.Client.Windows.Program</StartupObject>
        <ApplicationIcon>wwwroot\favicon.ico</ApplicationIcon>
        <ResolveStaticWebAssetsInputsDependsOn>
            BeforeBuildTasks;
            $(ResolveStaticWebAssetsInputsDependsOn)
        </ResolveStaticWebAssetsInputsDependsOn>
    </PropertyGroup>

    <ItemGroup>
        <Using Include="AdminPanel.Client.Core.Components.Layout" />
        <Using Include="AdminPanel.Client.Core.Components.Pages" />
        <Using Include="AdminPanel.Client.Core.Services.Contracts" />
        <Using Include="AdminPanel.Client.Core.Services" />
        <Using Include="AdminPanel.Shared" />
        <Watch Remove="*.scss" />

        <PackageReference Include="EmbedIO" />
        <PackageReference Include="Microsoft.Extensions.Logging.Debug" />
        <PackageReference Include="Microsoft.Extensions.Logging.Console" />
        <PackageReference Include="Microsoft.Extensions.Logging.EventLog" />
        <PackageReference Include="Microsoft.Extensions.Logging.EventSource" />
        <PackageReference Include="Microsoft.AspNetCore.Components.WebView.Wpf" />
        <PackageReference Include="Microsoft.Web.WebView2" />
        <PackageReference Include="Velopack" />
                <PackageReference Include="Newtonsoft.Json" />
        <PackageReference Include="Microsoft.AppCenter.Analytics" />
        <PackageReference Include="Microsoft.AppCenter.Crashes" />
        <PackageReference Include="West.Extensions.Logging.AppCenter" />
        <PackageReference Include="Microsoft.Extensions.Logging.ApplicationInsights" />
                <Content Include="..\AdminPanel.Client.Maui\wwwroot\index.html" Link="wwwroot\index.html">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </Content>
        <Content Remove="compilerconfig.json" />
        <None Include="compilerconfig.json" />
        <Content Include=".config\dotnet-tools.json" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\AdminPanel.Client.Core\AdminPanel.Client.Core.csproj" />
    </ItemGroup>

    <ItemGroup>
      <Resource Include="Resources\**\*.*" />
      <Content Remove="appsettings*.json" />
      <EmbeddedResource Include="appsettings*.json" />
    </ItemGroup>

    <Target Name="BeforeBuildTasks" AfterTargets="CoreCompile">
        <CallTarget Targets="BuildCssFiles" />
    </Target>

    <Target Name="BuildCssFiles">
        <Exec Command="../AdminPanel.Client.Core/node_modules/.bin/sass .:. --style compressed --load-path=." StandardOutputImportance="high" StandardErrorImportance="high" LogStandardErrorAsError="true" />
    </Target>

</Project>
