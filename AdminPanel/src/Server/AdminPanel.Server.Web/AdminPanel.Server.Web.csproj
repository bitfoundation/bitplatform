        <UserSecretsId>7D6049EF-168B-41EF-A4F1-39AEC3D4E924</UserSecretsId>
        <ValidateExecutableReferencesMatchSelfContained>false</ValidateExecutableReferencesMatchSelfContained>
    </PropertyGroup>
    
    <ItemGroup>
        <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.Server" />
        <PackageReference Include="Microsoft.ApplicationInsights.AspNetCore" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\AdminPanel.Server.Api\AdminPanel.Server.Api.csproj" />
        <ProjectReference Include="..\..\Client\AdminPanel.Client.Web\AdminPanel.Client.Web.csproj" />
    </ItemGroup>

    <ItemGroup>
        <Using Include="AdminPanel.Shared.Enums" />
    </ItemGroup>

    <!--
    https://learn.microsoft.com/en-us/dotnet/core/docker/publish-as-container
    https://learn.microsoft.com/en-us/visualstudio/containers/container-msbuild-properties
    -->
    <PropertyGroup>
        <DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>
        <EnableSdkContainerDebugging Condition="'$(Configuration)' == 'Debug'">True</EnableSdkContainerDebugging>
    </PropertyGroup>

</Project>
