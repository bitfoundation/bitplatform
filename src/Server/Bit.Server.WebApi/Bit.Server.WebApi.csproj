<Project Sdk="Microsoft.NET.Sdk">

	<Import Project="../../Bit.Build.props" />

	<PropertyGroup>
		<TargetFramework>net6.0</TargetFramework>
		<PackageTags>$(PackageTags) Web-API Rest Microsoft AspNet WebApi AspNetWebApi</PackageTags>
