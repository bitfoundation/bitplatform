@namespace Bit.BlazorUI
@inherits BitLoadingComponentBase

<style>
    .bit-ldn-Spinner {
        display: inline-block;
        position: relative;
        width: @(Size)px;
        height: @(Size)px;
    }

        .bit-ldn-Spinner div {
            transform-origin: @(Convert(40))px @(Convert(40))px;
            animation: bit-ldn-Spinner 1.2s linear infinite;
        }

            .bit-ldn-Spinner div:after {
                content: " ";
                display: block;
                position: absolute;
                border-radius: 20%;
                top: @(Convert(3))px;
                left: @(Convert(37))px;
                width: @(Convert(6))px;
                height: @(Convert(18))px;
                background: @(Color ?? "var(--bit-clr-fg-primary)");
            }

            .bit-ldn-Spinner div:nth-child(1) {
                transform: rotate(0deg);
                animation-delay: -1.1s;
            }

            .bit-ldn-Spinner div:nth-child(2) {
                transform: rotate(30deg);
                animation-delay: -1s;
            }

            .bit-ldn-Spinner div:nth-child(3) {
                transform: rotate(60deg);
                animation-delay: -0.9s;
            }

            .bit-ldn-Spinner div:nth-child(4) {
                transform: rotate(90deg);
                animation-delay: -0.8s;
            }

            .bit-ldn-Spinner div:nth-child(5) {
                transform: rotate(120deg);
                animation-delay: -0.7s;
            }

            .bit-ldn-Spinner div:nth-child(6) {
                transform: rotate(150deg);
                animation-delay: -0.6s;
            }

            .bit-ldn-Spinner div:nth-child(7) {
                transform: rotate(180deg);
                animation-delay: -0.5s;
            }

            .bit-ldn-Spinner div:nth-child(8) {
                transform: rotate(210deg);
                animation-delay: -0.4s;
            }

            .bit-ldn-Spinner div:nth-child(9) {
                transform: rotate(240deg);
                animation-delay: -0.3s;
            }

            .bit-ldn-Spinner div:nth-child(10) {
                transform: rotate(270deg);
                animation-delay: -0.2s;
            }

            .bit-ldn-Spinner div:nth-child(11) {
                transform: rotate(300deg);
                animation-delay: -0.1s;
            }

            .bit-ldn-Spinner div:nth-child(12) {
                transform: rotate(330deg);
                animation-delay: 0s;
            }

    @@keyframes bit-ldn-Spinner {
        0% {
            opacity: 1;
        }

        100% {
            opacity: 0;
        }
    }
</style>

<div style="@Style" class="bit-ldn-Spinner @Class">
    @for (int i = 0; i < 12; i++)
    {
        <div style="@ChildStyle" class="@ChildClass"></div>
    }
</div>