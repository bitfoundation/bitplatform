@namespace Bit.BlazorUI
@inherits BitLoadingComponentBase

<style>
    .bit-ldn-Roller {
        display: inline-block;
        position: relative;
        width: @(Size)px;
        height: @(Size)px;
    }

        .bit-ldn-Roller div {
            animation: bit-ldn-Roller 1.2s cubic-bezier(0.5, 0, 0.5, 1) infinite;
            transform-origin: @(Convert(40))px @(Convert(40))px;
        }

            .bit-ldn-Roller div:after {
                content: " ";
                display: block;
                position: absolute;
                width: @(Convert(7))px;
                height: @(Convert(7))px;
                border-radius: 50%;
                background: @(Color ?? "var(--bit-clr-fg-primary)");
                margin: -@(Convert(4))px 0 0 -@(Convert(4))px;
            }

            .bit-ldn-Roller div:nth-child(1) {
                animation-delay: -0.036s;
            }

                .bit-ldn-Roller div:nth-child(1):after {
                    top: @(Convert(63))px;
                    left: @(Convert(63))px;
                }

            .bit-ldn-Roller div:nth-child(2) {
                animation-delay: -0.072s;
            }

                .bit-ldn-Roller div:nth-child(2):after {
                    top: @(Convert(68))px;
                    left: @(Convert(56))px;
                }

            .bit-ldn-Roller div:nth-child(3) {
                animation-delay: -0.108s;
            }

                .bit-ldn-Roller div:nth-child(3):after {
                    top: @(Convert(71))px;
                    left: @(Convert(48))px;
                }

            .bit-ldn-Roller div:nth-child(4) {
                animation-delay: -0.144s;
            }

                .bit-ldn-Roller div:nth-child(4):after {
                    top: @(Convert(72))px;
                    left: @(Convert(40))px;
                }

            .bit-ldn-Roller div:nth-child(5) {
                animation-delay: -0.18s;
            }

                .bit-ldn-Roller div:nth-child(5):after {
                    top: @(Convert(71))px;
                    left: @(Convert(32))px;
                }

            .bit-ldn-Roller div:nth-child(6) {
                animation-delay: -0.216s;
            }

                .bit-ldn-Roller div:nth-child(6):after {
                    top: @(Convert(68))px;
                    left: @(Convert(24))px;
                }

            .bit-ldn-Roller div:nth-child(7) {
                animation-delay: -0.252s;
            }

                .bit-ldn-Roller div:nth-child(7):after {
                    top: @(Convert(63))px;
                    left: @(Convert(17))px;
                }

            .bit-ldn-Roller div:nth-child(8) {
                animation-delay: -0.288s;
            }

                .bit-ldn-Roller div:nth-child(8):after {
                    top: @(Convert(56))px;
                    left: @(Convert(12))px;
                }

    @@keyframes bit-ldn-Roller {
        0% {
            transform: rotate(0deg);
        }

        100% {
            transform: rotate(360deg);
        }
    }
</style>

<div style="@Style" class="bit-ldn-Roller @Class">
    @for (int i = 0; i < 8; i++)
    {
        <div style="@ChildStyle" class="@ChildClass"></div>
    }
</div>