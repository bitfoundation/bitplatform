@namespace Bit.BlazorUI
@inherits BitLoadingComponentBase

<style>
    .bit-ldn-DotsRing {
        display: inline-block;
        position: relative;
        width: @(Size)px;
        height: @(Size)px;
    }

        .bit-ldn-DotsRing div {
            position: absolute;
            border-radius: 50%;
            width: @(Convert(6))px;
            height: @(Convert(6))px;
            animation: bit-ldn-DotsRing 1.2s linear infinite;
            background: @(Color ?? "var(--bit-clr-fg-primary)");
        }

            .bit-ldn-DotsRing div:nth-child(1) {
                animation-delay: 0s;
                top: @(Convert(37))px;
                left: @(Convert(66))px;
            }

            .bit-ldn-DotsRing div:nth-child(2) {
                animation-delay: -0.1s;
                top: @(Convert(22))px;
                left: @(Convert(62))px;
            }

            .bit-ldn-DotsRing div:nth-child(3) {
                animation-delay: -0.2s;
                top: @(Convert(11))px;
                left: @(Convert(52))px;
            }

            .bit-ldn-DotsRing div:nth-child(4) {
                animation-delay: -0.3s;
                top: @(Convert(7))px;
                left: @(Convert(37))px;
            }

            .bit-ldn-DotsRing div:nth-child(5) {
                animation-delay: -0.4s;
                top: @(Convert(11))px;
                left: @(Convert(22))px;
            }

            .bit-ldn-DotsRing div:nth-child(6) {
                animation-delay: -0.5s;
                top: @(Convert(22))px;
                left: @(Convert(11))px;
            }

            .bit-ldn-DotsRing div:nth-child(7) {
                animation-delay: -0.6s;
                top: @(Convert(37))px;
                left: @(Convert(7))px;
            }

            .bit-ldn-DotsRing div:nth-child(8) {
                animation-delay: -0.7s;
                top: @(Convert(52))px;
                left: @(Convert(11))px;
            }

            .bit-ldn-DotsRing div:nth-child(9) {
                animation-delay: -0.8s;
                top: @(Convert(62))px;
                left: @(Convert(22))px;
            }

            .bit-ldn-DotsRing div:nth-child(10) {
                animation-delay: -0.9s;
                top: @(Convert(66))px;
                left: @(Convert(37))px;
            }

            .bit-ldn-DotsRing div:nth-child(11) {
                animation-delay: -1s;
                top: @(Convert(62))px;
                left: @(Convert(52))px;
            }

            .bit-ldn-DotsRing div:nth-child(12) {
                animation-delay: -1.1s;
                top: @(Convert(52))px;
                left: @(Convert(62))px;
            }

    @@keyframes bit-ldn-DotsRing {
        0%, 20%, 80%, 100% {
            transform: scale(1);
        }

        50% {
            transform: scale(1.5);
        }
    }
</style>

<div style="@Style" class="bit-ldn-DotsRing @Class">
    @for (int i = 0; i < 12; i++)
    {
        <div style="@ChildStyle" class="@ChildClass"></div>
    }
</div>