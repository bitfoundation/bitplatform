@namespace Bit.BlazorUI
@inherits BitComponentBase

@if (IsOpen)
{
    <div @ref="RootElement" @attributes="HtmlAttributes"
         style="@StyleBuilder.Value"
         class="@ClassBuilder.Value">
        <div role=@(_isAlertRole ? "alertdialog": "dialog")
             aria-modal="@((IsModeless is false).ToString())"
             aria-labelledby="@TitleAriaId"
             aria-describedby="@SubtitleAriaId"
             style="outline:none;">
            <div class="bit-mdl-doc @GetPositionClass()" role="document">
                @if (IsModeless is false)
                {
                    <div class="bit-mdl-ovl" aria-hidden="true" @onclick="CloseModal" />
                }

                <div id="@_containerId" class="bit-mdl-ctn">
                    <div class="bit-mdl-scr-cnt">
                        @ChildContent
                    </div>
                </div>
            </div>
        </div>
    </div>
}
