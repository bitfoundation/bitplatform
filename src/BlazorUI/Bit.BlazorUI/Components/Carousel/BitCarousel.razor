@namespace Bit.BlazorUI
@inherits BitComponentBase

<div @ref="RootElement"
     @attributes="HtmlAttributes"
     style="@StyleBuilder.Value"
     class="@ClassBuilder.Value">

    <CascadingValue Value="this"
                    IsFixed="true">
        @ChildContent
    </CascadingValue>
    <div class="bit-crsl-dots">
        @for (int i = 0; i < AllCarouselItems.Count; i++)
        {
            int index = i;
            <div class="@(CurrentIndex == index ? "bit-crsl-dot-current" : null )" @onclick="(()=>SelectItemByIndex(index))"></div>
        }
    </div>
    <div class="bit-crsl-buttons">
        <div class="bit-crsl-next-btn" @onclick="(()=>SelectItemByIndex(CurrentIndex+1))">
            <i class="bit-icon bit-icon--ChevronRight"></i>
        </div>
        <div class="bit-crsl-previuse-btn" @onclick="(()=>SelectItemByIndex(CurrentIndex-1))">
            <i class="bit-icon bit-icon--ChevronLeft"></i>
        </div>
    </div>
</div>