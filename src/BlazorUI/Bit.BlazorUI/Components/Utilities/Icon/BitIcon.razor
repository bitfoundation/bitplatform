@namespace Bit.BlazorUI
@inherits BitComponentBase

<i @ref="RootElement" @attributes="HtmlAttributes"
   id="@_Id"
   role="img"
   aria-label="@AriaLabel"
   style="@StyleBuilder.Value"
   class="@(IconName.HasValue() ? $"{ClassBuilder.Value} bit-icon bit-icon--{IconName}" : ClassBuilder.Value)"
   dir="@Dir?.ToString().ToLower()" />
