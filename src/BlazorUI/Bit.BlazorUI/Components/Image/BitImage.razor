@namespace Bit.BlazorUI
@inherits BitComponentBase

<div @ref="RootElement" @attributes="HtmlAttributes"
     class="@ClassBuilder.Value @Classes?.Container"
     style="@StyleBuilder.Value @Styles?.Container"
     aria-label="@AriaLabel">
    @if (ShouldStartVisible)
    {
        <img role="img"
             class="@GetImageFitClass() @GetCoverStyleClass() @Classes?.Image"
             style="@Styles?.Image"
             alt="@Alt"
             title="@Title"
             loading="@Loading"
             src="@_internalSrc"
             @onload="HandleOnLoad"
             @onerror="HandleOnError"
             @onclick="HandleOnClick"
             aria-hidden="@AriaHidden"
             aria-describedby="@AriaDescription" />        
    }
</div>