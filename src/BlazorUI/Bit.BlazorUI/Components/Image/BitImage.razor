@namespace Bit.BlazorUI
@inherits BitComponentBase

<div @ref="RootElement" @attributes="HtmlAttributes"
     class="@ClassBuilder.Value"
     style="@StyleBuilder.Value"
     aria-label="@AriaLabel">
    @if (_imageIsVisible)
    {
        <img @attributes="ImageAttributes" @onclick="HandleOnClick" @onload="HandleOnLoad" @onerror="HandleOnError" @onloadstart="HandleOnLoadStart"
             class="@GetImageClasses()"
             style="@Styles?.Image"
             alt="@Alt"
             title="@Title"
             loading="@Loading"
             src="@_internalSrc" />
    }
</div>