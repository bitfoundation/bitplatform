@namespace Bit.BlazorUI
@inherits BitComponentBase

<li @ref="RootElement"
    @attributes="HtmlAttributes"
    style="@StyleBuilder.Value"
    class="@ClassBuilder.Value"
    role="presentation">

    <button type="@Parent.ButtonType?.GetValue()"
            role="menuitem"
            aria-disabled="@IsEnabled"
            tabindex="@(IsEnabled ? 0 : -1)"
            class="option @(IsEnabled ? "" : "disabled")"
            @onclick="() => Parent.HandleOnOptionClick(this)">
        @if (Parent.OptionTemplate is not null)
        {
            @Parent.OptionTemplate(this)
        }
        else
        {
            @if (IconName.HasValue)
            {
                <i class="bit-icon bit-icon--@IconName.GetName()"></i>
            }
            <span class="text">
                @Text
            </span>
        }
    </button>
</li>