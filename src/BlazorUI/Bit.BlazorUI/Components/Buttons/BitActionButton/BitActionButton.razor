@namespace Bit.BlazorUI
@inherits BitComponentBase

@if (Href.HasValue() && IsEnabled)
{
    <a @ref="RootElement" @attributes="HtmlAttributes" @onclick="HandleOnClick"
       id="@_Id"
       style="@StyleBuilder.Value"
       class="@ClassBuilder.Value"
       href="@Href"
       title="@Title"
       target="@Target"
       tabindex="@_tabIndex"
       aria-label="@AriaLabel"
       aria-hidden="@AriaHidden"
       aria-describedby="@AriaDescription">
        <span style="@ClassStyles?.Container?.Style" class="bit-acb-ictn @ClassStyles?.Container?.Class">
            <i style="@ClassStyles?.Icon?.Style" class="bit-icon bit-icon--@IconName @ClassStyles?.Icon?.Class" />
            <span style="@ClassStyles?.Content?.Style" class="bit-acb-con @ClassStyles?.Content?.Class">
                @ChildContent
            </span>
        </span>
    </a>
}
else
{
    <button @ref="RootElement" @attributes="HtmlAttributes" @onclick="HandleOnClick"
            id="@_Id"
            style="@StyleBuilder.Value"
            class="@ClassBuilder.Value"
            title="@Title"
            tabindex="@_tabIndex"
            type="@_buttonType.GetValue()"
            aria-label="@AriaLabel"
            aria-hidden="@AriaHidden"
            aria-describedby="@AriaDescription">
        <span style="@ClassStyles?.Container?.Style" class="bit-acb-ictn @ClassStyles?.Container?.Class">
            <i style="@ClassStyles?.Icon?.Style" class="bit-icon bit-icon--@IconName @ClassStyles?.Icon?.Class" />
            <span style="@ClassStyles?.Content?.Style" class="bit-acb-con @ClassStyles?.Content?.Class">
                @ChildContent
            </span>
        </span>
    </button>
}