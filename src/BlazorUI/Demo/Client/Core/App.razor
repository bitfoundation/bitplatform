<PageTitle>bit BlazorUI</PageTitle>

<LayoutView Layout="@typeof(MainLayout)">
    <Router AppAssembly="@GetType().Assembly"
            AdditionalAssemblies="@(new[] { Assembly.Load(BlazorModeDetector.Current.IsBlazorHybrid() ? "Bit.BlazorUI.Demo.Client.App" : "Bit.BlazorUI.Demo.Client.Web") })"
            OnNavigateAsync="@OnNavigateAsync">
        <Found Context="routeData">
            <RouteView RouteData="@routeData" />
        </Found>
        <NotFound>
            <ChangeStatusCodeTo404 />
            <NotFoundComponent />
        </NotFound>
        <Navigating>
            <LoadingComponent />
        </Navigating>
    </Router>
</LayoutView>