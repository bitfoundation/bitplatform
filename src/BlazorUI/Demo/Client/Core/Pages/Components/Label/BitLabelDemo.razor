@page "/components/label"

<PageOutlet Url="components/label"
            Title="Label"
            Description="label component of the bit BlazorUI components" />

<ComponentDemo ComponentName="Label"
               ComponentDescription="Labels give a name or title to a control or group of controls, including text fields, check boxes, combo boxes, radio buttons, and drop-down menus."
               ComponentParameters="componentParameters">
    <ComponentExampleBox Title="Basic" HtmlCode="@example1HTMLCode" Id="example1">
        <ExamplePreview>
            <div>
                <BitLabel>I'm a Label</BitLabel>
                <BitLabel IsEnabled="false">I'm a disabled Label</BitLabel>
            </div>
        </ExamplePreview>
    </ComponentExampleBox>

    <ComponentExampleBox Title="Style and Class" HtmlCode="@example2HTMLCode" Id="example2">
        <ExamplePreview>
            <div>
                <BitLabel Style="color: dodgerblue; font-weight:bold">I'm a Label with Style</BitLabel>
                <BitLabel Class="custom-class">I'm a Label with Class</BitLabel>
            </div>
        </ExamplePreview>
    </ComponentExampleBox>

    <ComponentExampleBox Title="IsRequired" HtmlCode="@example3HTMLCode" Id="example3">
        <ExamplePreview>
            <div>
                <BitLabel IsRequired="true">I'm a required Label</BitLabel>
            </div>
        </ExamplePreview>
    </ComponentExampleBox>

    <ComponentExampleBox Title="For" HtmlCode="@example4HTMLCode" Id="example4">
        <ExamplePreview>
            <div>
                <BitLabel For="label-input">A Label for An Input</BitLabel>
                <input type="text" name="label-input" id="label-input" />
            </div>
        </ExamplePreview>
    </ComponentExampleBox>

    <ComponentExampleBox Title="Visibility" HtmlCode="@example5HTMLCode" Id="example5">
        <ExamplePreview>
            <div>
                <div style="display: flex">Visible: [ <BitLabel Visibility="BitVisibility.Visible">Visible Label</BitLabel> ]</div>
                <div style="display: flex">Hidden: [ <BitLabel Visibility="BitVisibility.Hidden">Hidden Label</BitLabel> ]</div>
                <div style="display: flex">Collapsed: [ <BitLabel Visibility="BitVisibility.Collapsed">Collapsed Label</BitLabel> ]</div>
            </div>
        </ExamplePreview>
    </ComponentExampleBox>
</ComponentDemo>