                            <BitChoiceGroup Label="Disabled ChoiceGroup"
                                            Items="ChoiceGroupBasicItems"
                                            IsEnabled="false"
                                            DefaultValue="@("A")" />

                            <BitChoiceGroup Label="ChoiceGroup with Disabled Option"
                                            Items="ChoiceGroupDisabledItems"
                                            DefaultValue="@("A")" />
                        </div>
                    </ExamplePreview>
                </ComponentExampleBox>

                <ComponentExampleBox Title="ChoiceGroup with images" HTMLSourceCode="@example3BitChoiceGroupItemHtmlCode" CSharpSourceCode="@example3BitChoiceGroupItemCSharpCode" ExampleId="example3">
