@inherits AppComponentBase

<PageTitle>@Title - Bit BlazorUI</PageTitle>

<HeadContent>
    <meta name="title" content="@Title - Bit BlazorUI" />
    <meta name="description" content="@Description" />

    <meta property="og:url" content="https://components.bitplatform.dev/@Url" />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Bit BlazorUI" />
    <meta property="og:title" content="@Title - Bit BlazorUI" />
    <meta property="og:description" content="@Description" />
    <meta property="og:image" content="@ImageUrl" />

    <meta name="twitter:title" content="@Title - Bit BlazorUI" />
    <meta name="twitter:description" content="@Description" />
    <meta name="twitter:image" content="@ImageUrl" />
</HeadContent>

@code {
    private string title = "Bit BlazorUI";

    [Parameter]
    public string Title
    {
        get => title;
        set
        {
            title = value;
            PubSubService.Pub(PubSubMessages.PAGE_TITLE_CHANGED, title);
        }
    }

    [Parameter] public string? Description { get; set; }
    [Parameter] public string? Url { get; set; }
    [Parameter] public string ImageUrl { get; set; } = "https://components.bitplatform.dev/images/og-image.svg";
}