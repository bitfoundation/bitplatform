@namespace Bit.BlazorUI.Demo.Client.Shared
@inherits LayoutComponentBase

<Header Style="@(OperatingSystem.IsWindows() ? "padding-top: 30px" : "")" />

<main class="@(CurrentUrl == "/" ? "full-page" : "")
             @BitCss.Background.Primary
             @(OperatingSystem.IsWindows() ? "isWindows" : "")">
    @if (CurrentUrl != "/")
    {
        <NavMenu />
    }
    <div class="site-content">
        <AppErrorBoundary>
            @Body
        </AppErrorBoundary>
    </div>
</main>

<MessageBox />
<Footer />