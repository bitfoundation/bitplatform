@page "/"
@namespace Bit.BlazorUI.Demo.Client.Shared.Pages

<div class="page-container">
    <section class="page-section hero-section">
        <div class="page-section-contnet">
            <HeroSection />
        </div>
    </section>

    <section class="page-section popular-components-section @(BitCss.BgColor.Primary2)">
        <div class="page-section-contnet">
            <PopularComponents />
        </div>
    </section>

    <section class="page-section benefit-section">
        <div class="page-section-contnet">
            <BenefitsSection />
        </div>
    </section>

    <section class="page-section component-list-section">
        <div class="page-section-contnet">
            <ComponentsSection />
        </div>
    </section>

    <section class="page-section contribution-section">
        <div class="page-section-contnet">
            <BitTypography Variant="BitTypographyVariant.H3" Gutter>Open Source contribution</BitTypography>
            <BitTypography Variant="BitTypographyVariant.Body1" Gutter Style="max-width: 700px">Backed by a professional dedicated development team and an active community, you are well supported to work out all challenges. Since all open source components are on GitHub, you can follow the production flow of the components.  Feel free to report bugs, fork the repo, and submit pull request.</BitTypography>
            <a class="section-btn" target="_blank" href="https://github.com/bitfoundation/bitplatform">
                <span class="github-icon"></span>
                GitHub
            </a>
        </div>
    </section>
</div>