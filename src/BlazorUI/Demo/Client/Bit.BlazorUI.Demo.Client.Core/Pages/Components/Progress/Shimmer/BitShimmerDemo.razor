@page "/components/shimmer"

<PageOutlet Url="shimmer"
            Title="Shimmer"
            Description="shimmer of the bit blazorui components" />

<ComponentDemo ComponentName="Shimmer"
               ComponentDescription="Shimmer is a temporary animation placeholder for when a service call takes time to return data and you don't want to block rendering the rest of the UI."
               ComponentParameters="componentParameters"
               ComponentSubEnums="componentSubEnums"
               ComponentSubClasses="componentSubClasses">
    <ComponentExampleBox Title="Basic" RazorCode="@example1RazorCode" Id="example1">
        <ExamplePreview>
            <div>Explore the fundamental use of the BitShimmer.</div>
            <br />
            <BitShimmer Height="1.5rem" />
        </ExamplePreview>
    </ComponentExampleBox>

    <ComponentExampleBox Title="Shapes" RazorCode="@example2RazorCode" Id="example2">
        <ExamplePreview>
            <div>Explore different shapes of BitShimmer for varied visual effects.</div>
            <br /><br />
            <div>Line (default)</div>
            <BitShimmer Height="3rem" />
            <br />
            <div>Circle</div>
            <BitShimmer Circle Height="3rem" />
        </ExamplePreview>
    </ComponentExampleBox>

    <ComponentExampleBox Title="Animations" RazorCode="@example3RazorCode" Id="example3">
        <ExamplePreview>
            <div>Discover various animation options of BitShimmer for different effects.</div>
            <br /><br />
            <div>Wave (default)</div>
            <BitShimmer Height="4rem" AnimationDuration="5000" AnimationDelay="1000" />
            <br /><br />
            <div>Pulse</div>
            <BitStack Horizontal>
                <BitShimmer Pulse Circle Height="4rem" AnimationDuration="3000" AnimationDelay="1000" />
                <BitShimmer Pulse Height="4rem" Width="100%" AnimationDuration="3000" AnimationDelay="1000" />
            </BitStack>
        </ExamplePreview>
    </ComponentExampleBox>

    <ComponentExampleBox Title="IsDataLoaded" RazorCode="@example4RazorCode" CsharpCode="@example4CsharpCode" Id="example4">
        <ExamplePreview>
            <div>Utilize BitShimmer's IsDataLoaded feature, displaying content when data is loaded.</div>
            <br /><br />
            <BitShimmer IsDataLoaded="@isDataLoaded" AriaLabel="Loading content" Height="1.5rem">
                Content loaded successfully.
            </BitShimmer>
            <br />
            <BitToggleButton @bind-IsChecked="@isDataLoaded" Text="Toggle shimmer" />
        </ExamplePreview>
    </ComponentExampleBox>

    <ComponentExampleBox Title="Advanced" RazorCode="@example5RazorCode" CsharpCode="@example5CsharpCode" Id="example5">
        <ExamplePreview>
            <div>Explore advanced usage of BitShimmer, including template, content and nested shimmers.</div>
            <br /><br />
            <BitShimmer IsDataLoaded="@isContentLoaded" AriaLabel="Loading content" Width="15.1rem">
                <Content>
                    <BitImage Height="8rem" Alt="bit logo"
                              Src="_content/Bit.BlazorUI.Demo.Client.Core/images/bit-logo-blue.png" />
                    <br />
                    <BitPersona PrimaryText="Annie Lindqvist"
                                SecondaryText="Software Engineer"
                                Size="@BitPersonaSize.Size56"
                                Presence="@BitPersonaPresence.Online"
                                ImageUrl="https://static2.sharepointonline.com/files/fabric/office-ui-fabric-react-assets/persona-female.png" />
                </Content>
                <ShimmerTemplate>
                    <BitShimmer Height="8rem" />
                    <br />
                    <BitStack Horizontal>
                        <BitShimmer Circle Height="3.5rem" />
                        <BitStack>
                            <BitShimmer Height="1.25rem" Width="8.5rem" />
                            <BitShimmer Height="0.75rem" Width="7rem" />
                        </BitStack>
                    </BitStack>
                </ShimmerTemplate>
            </BitShimmer>
            <br />
            <BitToggleButton @bind-IsChecked="@isContentLoaded" Text="Toggle shimmer" />
        </ExamplePreview>
    </ComponentExampleBox>

