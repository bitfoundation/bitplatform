@page "/components/layout"

<PageOutlet Url="components/layout"
            Title="Layout"
            Description="layout component of the bit BlazorUI components" />

<DemoPage Name="Layout"
          Description="Layout can be used to create a base UI structure for an application."
          Parameters="componentParameters"
          SubClasses="componentSubClasses"
          GitHubUrl="Layouts/Layout/BitLayout.razor"
          GitHubDemoUrl="Layouts/Layout/BitLayoutDemo.razor">
    <DemoExample Title="Basic" RazorCode="@example1RazorCode" Id="example1">
        <div class="container">
            <BitLayout>
                <Header>
                    <div class="header">Header</div>
                </Header>
                <Main>
                    <div class="main">Main</div>
                </Main>
                <Footer>
                    <div class="footer">Footer</div>
                </Footer>
            </BitLayout>
        </div>
    </DemoExample>

    <DemoExample Title="NavPanel" RazorCode="@example2RazorCode" CsharpCode="@example2CsharpCode" Id="example2">
        <BitToggle Label="Hide NavPanel" @bind-Value="HideNavPanel" />
        <br />
        <div class="container">
            <BitLayout HideNavPanel="HideNavPanel">
                <Header>
                    <div class="header">Header</div>
                </Header>
                <NavPanel>
                    <div class="nav-menu">NavPanel</div>
                </NavPanel>
                <Main>
                    <div class="main">Main</div>
                </Main>
                <Footer>
                    <div class="footer">Footer</div>
                </Footer>
            </BitLayout>
        </div>
    </DemoExample>

    <DemoExample Title="Styles & Classes" RazorCode="@example3RazorCode" Id="example3">
        <div class="container">
            <BitLayout Styles="@(new() { Main = "height: 19rem;" })"
                       Classes="@(new() { Header = "header2",
                                              Main = "main2",
                                              NavPanel = "nav-menu2",
                                              MainContent = "main-content2",
                                              Footer = "footer2" })">
                <Header>Header</Header>
                <NavPanel>NavPanel</NavPanel>
                <Main>Main</Main>
                <Footer>Footer</Footer>
            </BitLayout>
        </div>
    </DemoExample>
</DemoPage>