@code {
    private int index;
    private BitCarousel carousel = default!;

    private void GoNext()
    {
        carousel.GoNext();
    }

    private void GoPrev()
    {
        carousel.GoPrev();
    }

    private void GoTo()
    {
        carousel.GoTo(index);
    }
}