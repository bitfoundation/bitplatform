        <br />

        <BitActionButton IconName="@BitIconName.AddFriend" IsEnabled="false">
            Disabled
        </BitActionButton>
        
        <br />
        
        <BitActionButton IconName="@BitIconName.AlarmClock" AriaLabel="Call">
            AriaLabel
        </BitActionButton>
        
        <br />
        
