<ComponentExampleBox Title="Customizations" RazorCode="@example6RazorCode" CsharpCode="@example6CsharpCode" Id="example6">
    <ExamplePreview>
        <div class="example-box">
            <div>
                <BitBreadcrumb TItem="BitBreadcrumbOption" MaxDisplayedItems="@MaxDisplayedItems" OverflowIndex="@OverflowIndex">
                    @for (int i = 0; i < ItemsCount; i++)
                    {
                        int index = i + 1;
                        <BitBreadcrumbOption Text="@($"Option {index}")" IsSelected="@(CustomizedSelectedOptionNumber == index)" OnClick="() => CustomizedSelectedOptionNumber = index" />
                    }
                </BitBreadcrumb>
            </div>
            <div class="operators">
                <div>
                    <BitButton OnClick="() => ItemsCount++">Add Option</BitButton>
                    <BitButton OnClick="() => ItemsCount--">Remove Option</BitButton>
                </div>
                <div>
                    <BitNumberField @bind-Value="MaxDisplayedItems" Label="MaxDisplayedOption" ShowButtons="true" />
                    <BitNumberField @bind-Value="OverflowIndex" Label="OverflowIndex" ShowButtons="true" />
                </div>
            </div>
        </div>
    </ExamplePreview>
</ComponentExampleBox>

