            <BitChoiceGroupOption Text="Products" Id="Products" Value="optionProducts" />
            <BitChoiceGroupOption Text="Academy" Id="Academy" Value="optionAcademy" />
            <BitChoiceGroupOption Text="Profile" Id="Profile" Value="optionProfile" />
        </BitChoiceGroup>
    </ExamplePreview>
</ComponentExampleBox>

