&lt;BitButton Size="BitSize.Large" IconName="@BitIconName.Add">
    Click me
&lt;/BitButton>

&lt;BitTextField Label="Enter your name" Placeholder="Name" />

&lt;BitDatePicker Label="Select a date" /></CodeBox>
