@page "/"
@namespace Bit.BlazorUI.Demo.Client.Core.Pages

<PageOutlet Url=""
            Title="Home"
            Description="home page of the bit blazorui components"
            Keywords="Blazor UI, Blazor components, Blazor WebAssembly UI, Blazor Server UI, Blazor Hybrid UI, .NET UI components, C# UI library, open source Blazor controls, Blazor toolkit, high performance Blazor, responsive Blazor components, Blazor PWA UI, BlazorUI documentation, Blazor WASM UI, Blazor SSR components, Blazor native UI, Bit BlazorUI" />

<div class="homepage-container">
    <section class="homepage-section hero-section">
        <div class="homepage-section-content">
            <HeroSection />
        </div>
    </section>

    <section class="homepage-section popular-components-section">
        <div class="homepage-section-content">
            <PopularComponents />
        </div>
    </section>

    <section class="homepage-section benefit-section">
        <div class="homepage-section-content">
            <BenefitsSection />
        </div>
    </section>

    <section class="homepage-section component-list-section">
        <div class="homepage-section-content">
            <ComponentsSection />
        </div>
    </section>

    <section class="homepage-section contribution-section">
        <div class="homepage-section-content">
            <BitText Typography="BitTypography.H3" Gutter>Open Source contribution</BitText>
            <BitText Typography="BitTypography.Body1" Gutter Style="max-width: 700px">
