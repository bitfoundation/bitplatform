@inherits AppComponentBase

<BitModal @bind-IsOpen="_isOpen">
    <div class="main">
        <div class="header">
            <span class="title">@_title</span>
            <BitButton IconName="@BitIconName.ChromeClose"
                       Variant="BitVariant.Text"
                       OnClick="OnCloseClick" />
        </div>
        <div class="body">
            @_body
        </div>
        <div class="footer">
            <BitButton OnClick="OnOkClick">OK</BitButton>
        </div>
    </div>
</BitModal>
