@inherits AppComponentBase

@if (Items is not null && Items.Count > 0)
{
    <ul class="side-rail">
        <li><b>Content</b></li>
        @foreach (var item in Items)
        {
            <li>
                <BitLink OnClick="@(() => ScrollToItem(item))" NoUnderline>
                    <BitText Variant="BitTextVariant.Body2">
                        @item.Title
                    </BitText>
                </BitLink>
            </li>
        }
    </ul>
}