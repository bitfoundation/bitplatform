<BitText Variant="BitTextVariant.H6" Gutter><b>@Name</b> @NameSuffix</BitText>
<table class="table-view params-table">
    <tr class="th-row">
        <th class="th-cell"><BitText Variant="BitTextVariant.Subtitle1">Name</BitText></th>
        <th class="th-cell"><BitText Variant="BitTextVariant.Subtitle1">Type</BitText></th>
        <th class="th-cell"><BitText Variant="BitTextVariant.Subtitle1">Default value</BitText></th>
        <th class="th-cell"><BitText Variant="BitTextVariant.Subtitle1">Description</BitText></th>
    </tr>
    @foreach (var param in Parameters)
    {
        <tr class="tdata-row">
            <td class="td-cell"><BitText Variant="BitTextVariant.Caption1">@param.Name</BitText></td>
            <td class="td-cell">
                @if (param.LinkType == LinkType.Link)
                {
                    <BitLink Href="@param.Href">
                        <BitText Variant="BitTextVariant.Caption1">@param.Type</BitText>
                    </BitLink>
                }
                else
                {
                    <BitText Variant="BitTextVariant.Caption1">@param.Type</BitText>
                }
            </td>
            <td class="td-cell"><BitText Variant="BitTextVariant.Caption1">@param.DefaultValue</BitText></td>
            <td class="td-cell"><BitText Variant="BitTextVariant.Caption1">@param.Description</BitText></td>
        </tr>
    }
</table>
