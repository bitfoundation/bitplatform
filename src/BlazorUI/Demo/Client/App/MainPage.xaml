<ContentPage
    x:Class="Bit.BlazorUI.Demo.Client.App.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:b="clr-namespace:Microsoft.AspNetCore.Components.WebView.Maui;assembly=Microsoft.AspNetCore.Components.WebView.Maui"
    xmlns:client="clr-namespace:Bit.BlazorUI.Demo.Client.Shared;assembly=Bit.BlazorUI.Demo.Client.Shared"
    BackgroundColor="{AppThemeBinding Dark={OnPlatform Android=#ffffff,
                                                       Default=#000000},
                                      Light=#ffffff}"
    Loaded="ContentPage_Loaded"
    NavigationPage.HasNavigationBar="False">

    <b:BlazorWebView
        x:Name="blazorWebView"
        BackgroundColor="#ffffff"
        HostPage="wwwroot/index.html">
        <b:BlazorWebView.RootComponents>
            <b:RootComponent ComponentType="{x:Type client:App}" Selector="app" />
        </b:BlazorWebView.RootComponents>
    </b:BlazorWebView>

</ContentPage>
