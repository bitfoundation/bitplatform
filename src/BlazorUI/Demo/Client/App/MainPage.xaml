<ContentPage
    x:Class="Bit.BlazorUI.Demo.Client.App.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:b="clr-namespace:Microsoft.AspNetCore.Components.WebView.Maui;assembly=Microsoft.AspNetCore.Components.WebView.Maui"
    xmlns:client="clr-namespace:Bit.BlazorUI.Demo.Client.Shared;assembly=Bit.BlazorUI.Demo.Client.Shared"
    BackgroundColor="{AppThemeBinding Light={OnPlatform Android=#ffffff, Default=#ffffff},
                                      Dark={OnPlatform Android=#ffffff, Default=#000000}}"
    Loaded="ContentPage_Loaded">

    <b:BlazorWebView
        x:Name="blazorWebView"
        BackgroundColor="{AppThemeBinding Light={OnPlatform Android=#ffffff, Default=#ffffff},
                                          Dark={OnPlatform Android=#ffffff, Default=#000000}}"
        HostPage="wwwroot/index.html">
        <b:BlazorWebView.RootComponents>
            <b:RootComponent ComponentType="{x:Type client:App}" Selector="#app-container" />
        </b:BlazorWebView.RootComponents>
    </b:BlazorWebView>

</ContentPage>
