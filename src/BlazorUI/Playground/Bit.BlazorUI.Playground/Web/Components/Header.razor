@inherits AppComponentBase

<header class="main-header @(CurrentUrl == "/" ? "main-header--home" : null)">
    <div class="header-main-container">
        <div class="header-content-container">
            @if (CurrentUrl != "/")
            {
                <BitIconButton Class="header-menu-btn" IconName=BitIconName.CollapseMenu OnClick=@WrapHandled(ToggleMenu)  AriaLabel="Header menu button"/>
            }
            <a class="header-logo" href="/" aria-label="Homepage"></a>
            <a class="header-link @(CurrentUrl == "/" ? "header-link--active" : "")" href="/">Home</a>
            <a class="header-link @(CurrentUrl == "/components/overview" ? "header-link--active" : "")" href="/components/overview">Demo</a>
            <a class="header-link @(CurrentUrl == "/get-started" ? "header-link--active" : "")" href="/get-started">Get Started</a>
            <a class="header-link @(CurrentUrl == "/icons" ? "header-link--active" : "")" href="/icons">Iconography</a>
        </div>
        <a class="github-btn" target="_blank" aria-label="Github repository" href="https://github.com/bitfoundation/bitplatform"></a>
    </div>

    <div class="header-second-row">
        <BitActionButton Class="header-action-button"
                         IconName=@(IsHeaderMenuOpen ? BitIconName.ChevronDown : BitIconName.ChevronUp)
                         OnClick=ToggleHeaderMenu>@GetActiveRouteName()</BitActionButton>
    </div>
</header>

@if (IsHeaderMenuOpen)
{
    <nav class="header-nav">
        <BitIconButton Class="header-nav-close-btn"
                   IconName=BitIconName.Cancel
                   OnClick=ToggleHeaderMenu />
        <a class="header-nav-link @(CurrentUrl == "/" ? "header-nav-link--active" : "")" href="/" @onclick=ToggleHeaderMenu>Home</a>
        <a class="header-nav-link @(CurrentUrl == "/components/overview" ? "header-nav-link--active" : "")" href="/components/overview" @onclick=ToggleHeaderMenu>Demo</a>
        <a class="header-nav-link @(CurrentUrl == "/get-started" ? "header-nav-link--active" : "")" href="/get-started" @onclick=ToggleHeaderMenu>Get Started</a>
        <a class="header-nav-link @(CurrentUrl == "/icons" ? "header-nav-link--active" : "")" href="/icons" @onclick=ToggleHeaderMenu>Iconography</a>
    </nav>
}