<CascadingValue Value="Visual">
    <BitColorPicker IsEnabled="IsEnabled"
                    @bind-Color="Color"
                    @ref="ElementReference"
                    AlphaChanged="(double alpha) => Alpha = alpha"
                    ShowPreview="ShowPreview"
                    ShowAlphaSlider="ShowAlphaSlider">
    </BitColorPicker>
</CascadingValue>

@code {
    public BitColorPicker ElementReference { get; set; }
    [Parameter] public Visual Visual { get; set; }
    [Parameter] public bool IsEnabled { get; set; }
    [Parameter] public double Alpha { get; set; }
    [Parameter] public string Color { get; set; }
    [Parameter] public string Rgb { get; set; }
    [Parameter] public string Hex { get; set; }
    [Parameter] public bool ShowPreview { get; set; }
    [Parameter] public bool ShowAlphaSlider { get; set; }
}