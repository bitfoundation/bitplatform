<CascadingValue Value="Visual">
    <BitRadioButtonGroup Name="@RadioButtonGroupName"
                    IsEnabled="@RadioButtonGroupIsEnabled"
                    OnValueChange="HandleValueChange"
                    IsRequired="IsRequired"
                    Label="@Label">
        <BitRadioButtonOption Value="@Value"
                         IsEnabled="@RadioButtonOptionIsEnabled"
                         Text="@Text"
                         Name="@RadioButtonOptionName"
                         IsChecked="IsChecked"
                         OnClick="HandleClick"
                         OnChange="HandleChange">
        </BitRadioButtonOption>
        <BitRadioButtonOption Value="option2"
                         IsEnabled="@RadioButtonOptionIsEnabled">
        </BitRadioButtonOption>
        <BitRadioButtonOption Value="@Value"
                         IsEnabled="@RadioButtonOptionIsEnabled"
                         Text="@Text"
                         ImageSrc="@ImageSrc"
                         ImageAlt="@ImageAlt"
                         SelectedImageSrc="@SelectedImageSrc"
                         ImageSize="ImageSize">
        </BitRadioButtonOption>
        <BitRadioButtonOption Value="@Value"
                         IsEnabled="@RadioButtonOptionIsEnabled"
                         Text="@Text"
                         IconName="@IconName">
        </BitRadioButtonOption>
    </BitRadioButtonGroup>
</CascadingValue>

@code {
    [Parameter] public Visual Visual { get; set; }
    [Parameter] public bool RadioButtonGroupIsEnabled { get; set; } = true;
    [Parameter] public string RadioButtonGroupName { get; set; }
    [Parameter] public bool IsRequired { get; set; }
    [Parameter] public string Label { get; set; }

    [Parameter] public bool RadioButtonOptionIsEnabled { get; set; } = true;
    [Parameter] public string Value { get; set; }
    [Parameter] public string Text { get; set; }
    [Parameter] public string RadioButtonOptionName { get; set; }
    [Parameter] public bool IsChecked { get; set; }

    [Parameter] public string ImageSrc { get; set; }
    [Parameter] public string ImageAlt { get; set; }
    [Parameter] public string SelectedImageSrc { get; set; }
    [Parameter] public System.Drawing.Size? ImageSize { get; set; }
    [Parameter] public BitIconName? IconName { get; set; }

    public int RadioButtonOptionClickedValue { get; set; }
    public int RadioButtonOptionChangedValue { get; set; }
    public string RadioButtonGroupChangedValue { get; set; }

    public void HandleClick(MouseEventArgs e)
    {
        RadioButtonOptionClickedValue++;
    }

    public void HandleValueChange(string value)
    {
        RadioButtonGroupChangedValue = value;
    }

    public void HandleChange(bool isChecked)
    {
        RadioButtonOptionChangedValue++;
    }
}
