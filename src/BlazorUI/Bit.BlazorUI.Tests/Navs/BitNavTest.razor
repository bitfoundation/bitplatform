<CascadingValue Value="Visual">
    <BitNav InitialSelectedKey="@InitialSelectedKey"
            SelectedKey="@SelectedKey"
            AriaLabel="@AriaLabel"
            IsOnTop="IsOnTop"
            RenderType="@RenderType"
            NavLinkItems="NavLinkItems"
            OnLinkClick="OnlinkClick"
            OnLinkExpandClick="OnLinkExpandClick"
            Mode="@Mode">
    </BitNav>
</CascadingValue>

@code {
    [Parameter] public Visual Visual { get; set; }
    [Parameter] public string SelectedKey { get; set; }
    [Parameter] public string InitialSelectedKey { get; set; }
    [Parameter] public string AriaLabel { get; set; }
    [Parameter] public bool IsOnTop { get; set; }
    [Parameter] public BitNavRenderType RenderType { get; set; }
    [Parameter] public List<BitNavLinkItem> NavLinkItems { get; set; } = new List<BitNavLinkItem> { new BitNavLinkItem { Name = "Test", Key = "Test" } };
    [Parameter] public BitNavMode Mode { get; set; } = BitNavMode.Automatic;

    public string OnLinkClickValue = string.Empty;
    public string OnLinkExpandClickValue = string.Empty;

    public void OnlinkClick(BitNavLinkItem navLinkItem)
    {
        OnLinkClickValue = navLinkItem.Name;
    }

    public void OnLinkExpandClick(BitNavLinkItem navLinkItem)
    {
        OnLinkExpandClickValue = navLinkItem.Key;
    }
}
