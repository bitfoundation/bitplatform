@code {
    [Parameter] public bool ShowAssets { get; set; } = false;
    [Parameter] public bool ShowLogs { get; set; } = false;
    [Parameter] public string AppContainer { get; set; } = "#app";

}

<style>
    #bit-bup {
        display: none;
        position: fixed;
        background: #fff;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        padding: 20px;
        text-align: center;
        font-family: "Segoe UI", "Segoe UI Web (West European)", "Segoe UI", -apple-system, BlinkMacSystemFont, Roboto, "Helvetica Neue", sans-serif;
    }

    .bit-bup-container {
        width: 70%;
        margin: 0 auto;
        margin-top: 45px;
    }

    .bit-bup-title {
        font-size: 20px;
    }

    #bit-bup-percent {
        font-size: 18px;
        margin-top: 15px;
    }

    .bit-bup-description {
        font-size: 14px;
        margin-bottom: 20px;
    }

    .bit-bup-progress {
        background-color: rgb(237, 235, 233);
    }

    #bit-bup-progress-bar {
        background-color: rgb(0, 120, 212);
        border-radius: 10px;
        height: 2px;
    }

    #bit-bup-reload {
        display: none;
        margin-bottom: 8px;
    }

    #bit-bup-assets {
        font-size: 10px;
        overflow: auto;
        height: 50vh;
        text-align: left;
    }
</style>

<div id="bit-bup">
    <div class="bit-bup-container">
        <p class="bit-bup-title">Downloading resources</p>
        <p class="bit-bup-description">Downloading updates, please wait...</p>
        <div class="bit-bup-progress">
            <div id="bit-bup-progress-bar" style="width: 0%"></div>
        </div>
        <p id="bit-bup-percent">0 %</p>
        <ul id="bit-bup-assets" style="display: @(ShowAssets ? "block" : "none");"></ul>
    </div>
    <img style="display: none" src="" 
         onerror="startBupProgress(@(ShowLogs ? "true" : "false"), @(ShowAssets ? "true" : "false"), '@(AppContainer)')">
</div>