@page "/create-edit-category/{Id:int?}"

@attribute [Authorize]

@inherits AppComponentBase;

<PageTitle>Create/Edit category</PageTitle>


<div class="page-container">
    <EditForm Model="Category" OnSubmit="WrapHandled(Save)" class="form--white">

        <DataAnnotationsValidator />
        <h1 class="form-title">Category</h1>
        <div class="form-input-container">
            <BitTextField Label="@(nameof(Category.Name))" @bind-Value="Category!.Name" />
            <ValidationMessage For="() => Category.Name" />
        </div>



        @* <div class="form-input-container">
        <BitColorPicker ShowPreview=false @bind-Color="Category!.Color">Default ColorPicker</BitColorPicker>
        <ValidationMessage For="() => Category.Color" />
        </div>*@

        <div class="form-input-container">
            <label for="head">Color</label>
            <input type="color" @bind-value="Category.Color" />
        </div>


        <BitButton Class="form-submit-button"
                   ButtonStyle="BitButtonStyle.Primary"
                   ButtonType="BitButtonType.Submit"
                   AriaLabel="Category">
                   Save
        </BitButton>


    </EditForm>


</div>
