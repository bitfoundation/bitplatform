@inherits AppComponentBase;
@inject NavigationManager navigationManager

<AuthorizeView>
    @ErrorStrings.ForbiddenException
</AuthorizeView>

@code {
    [Parameter] public ClaimsPrincipal ClaimsPrincipal { get; set; } = default!;

    protected override void OnAfterRender(bool firstRender)
    {
        if (firstRender)
        {
            if (ClaimsPrincipal.Identity?.IsAuthenticated is false)
            {
                var redirectUrl = navigationManager.ToBaseRelativePath(navigationManager.Uri);

                navigationManager.NavigateTo($"/sign-in?redirectUrl={redirectUrl}");
            }
        }

        base.OnAfterRender(firstRender);
    }
}
