@page "/"

@inherits AppComponentBase;

<PageTitle>@AppStrings.TodoTemplateHomeTitle</PageTitle>

<div class="page-container">
    <section class="page-section hero-section">
        <h1 class="hero-section-title">@AppStrings.TodoTemplateHomeTitle</h1>
        <div class="hero-section-desc">
            @AppStrings.TodoTemplateHomeMessage
        </div>
        <BitButton Class="hero-section-cta"
                   Href="https://github.com/bitfoundation/bitplatform/tree/develop/src/Templates/TodoTemplate/Bit.TodoTemplate"
                   Target="_blank"
                   Title="@AppStrings.GitHubRepo"
                   AriaLabel="@AppStrings.GitHubRepo"
                   ButtonStyle="BitButtonStyle.Standard">@AppStrings.GitHubRepo</BitButton>
    </section>
</div>