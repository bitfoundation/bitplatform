<ContentPage
    x:Class="TodoTemplate.Client.App.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:b="clr-namespace:Microsoft.AspNetCore.Components.WebView.Maui;assembly=Microsoft.AspNetCore.Components.WebView.Maui"
    xmlns:client="clr-namespace:TodoTemplate.Client.Shared;assembly=TodoTemplate.Client.Shared"
    BackgroundColor="{AppThemeBinding Dark=#0D2960,
                                      Light={OnPlatform Android=#0D2960,
                                                        Default=#F2F2F2}}"
    Loaded="ContentPage_Loaded"
    NavigationPage.HasNavigationBar="False">

    <b:BlazorWebView
        x:Name="blazorWebView"
        BackgroundColor="#0D2960"
        HostPage="wwwroot/index.html">
        <b:BlazorWebView.RootComponents>
            <b:RootComponent ComponentType="{x:Type client:App}" Selector="app" />
        </b:BlazorWebView.RootComponents>
    </b:BlazorWebView>

</ContentPage>
