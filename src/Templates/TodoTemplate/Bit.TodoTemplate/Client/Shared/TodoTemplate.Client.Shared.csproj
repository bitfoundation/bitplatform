<Project Sdk="Microsoft.NET.Sdk.Razor">

    <PropertyGroup>
        <TargetFrameworks>net6.0</TargetFrameworks>
        <UseMauiEssentials Condition=" '$(BlazorMode)' == 'BlazorHybrid' ">true</UseMauiEssentials>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
    </PropertyGroup>

    <ItemGroup>
        <SupportedPlatform Include="browser" />

        <Content Remove="compilerconfig.json" />
        <None Include="compilerconfig.json" />

        <PackageReference Include="Bit.BlazorUI" Version="4.2.0-pre-06" />
        <PackageReference Include="Bit.CodeAnalyzers" Version="4.2.0-pre-06">
            <PrivateAssets>all</PrivateAssets>
            <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
        </PackageReference>
        <PackageReference Include="Bit.SourceGenerators" Version="4.2.0-pre-06">
            <PrivateAssets>all</PrivateAssets>
            <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
        </PackageReference>
        <PackageReference Include="jose-jwt" Version="4.0.1" />
        <PackageReference Include="LibSassBuilder" Version="2.0.2" Watch="false">
            <PrivateAssets>all</PrivateAssets>
            <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
        </PackageReference>
        <PackageReference Include="Microsoft.AspNetCore.Components.Authorization" Version="6.0.8" />
        <PackageReference Condition=" '$(BlazorMode)' == 'BlazorWebAssembly' " Include="Microsoft.AspNetCore.Components.WebAssembly" Version="6.0.8" />
        <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="6.0.8" />
        <PackageReference Include="Microsoft.TypeScript.MSBuild" Version="4.8.3">
            <PrivateAssets>all</PrivateAssets>
            <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
        </PackageReference>

        <Using Include="Microsoft.AspNetCore.Components" />
        <Using Include="TodoTemplate.Client.Shared.Services.Contracts" />
        <Using Include="TodoTemplate.Client.Shared.Services.Implementations" />
        <Using Include="Microsoft.Extensions.Configuration" />
        <Using Include="Microsoft.JSInterop" />
        <Using Include="System.Net.Http.Json" />
        <Using Include="System.Collections.Concurrent" />
        <Using Include="Microsoft.AspNetCore.Components.Authorization" />
        <Using Include="TodoTemplate.Client.Shared.Components" />
        <Using Include="Bit.BlazorUI" />
        <Using Include="Microsoft.AspNetCore.Authorization" />
        <Using Include="Microsoft.Maui.Storage" />

        <Watch Remove="*.scss" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\..\Shared\Shared\TodoTemplate.Shared.csproj" />
    </ItemGroup>

</Project>
