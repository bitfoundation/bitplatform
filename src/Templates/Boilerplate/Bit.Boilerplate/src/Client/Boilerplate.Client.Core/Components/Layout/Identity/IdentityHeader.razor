@inherits AppComponentBase

<header>
    <BitStack Horizontal Grows>
        <BitLink>
            <BitStack Horizontal>
                <BitIcon IconName="@BitIconName.DecreaseIndentArrow" />
                <BitTypography Variant="BitTypographyVariant.Body2">Back to home</BitTypography>
            </BitStack>
        </BitLink>

        <BitSpacer />

        <BitButton IconName="@BitIconName.Sunny" IconOnly Variant="BitVariant.Text" />
        <BitDropdown @bind-Value="SelectedCulture"
                     Class="culture-drp"
                     Items="cultures"
                     OnSelectItem="WrapHandled((BitDropdownItem<string> item) => OnCultureChanged())" />
    </BitStack>
</header>