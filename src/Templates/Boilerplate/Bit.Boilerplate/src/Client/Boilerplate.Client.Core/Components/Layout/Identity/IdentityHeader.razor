@inherits AppComponentBase

<header>
    <BitStack Horizontal Grows Gap="1rem">
        <BitLink NoUnderline Href="@Urls.HomePage">
            <BitStack Horizontal VerticalAlign="BitAlignment.Center">
                <BitIcon IconName="@BitIconName.DecreaseIndentArrow" />
                <BitText Typography="BitTypography.Body2">Back to home</BitText>
            </BitStack>
        </BitLink>

        <BitSpacer />

        <BitButton IconOnly
                   Variant="BitVariant.Text"
                   IconName="@BitIconName.Sunny"
                   Color="BitColor.SecondaryBackground" />

        <BitDropdown @bind-Value="SelectedCulture"
                     FitWidth NoBorder Transparent Items="cultures"
                     OnSelectItem="WrapHandled((BitDropdownItem<string> item) => OnCultureChanged())" />
    </BitStack>
</header>