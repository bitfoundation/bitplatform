<BitImage
    Width="@Width"
    Class="@Class" 
    Src="@(Src ?? "_content/Boilerplate.Client.Core/images/product-placeholder.svg")"
    StartVisible=@(AppPlatform.IsBlazorHybridOrBrowser is false)>
    <LoadingTemplate>
        <BitShimmer Style="width:100%;height:unset;aspect-ratio:1" />
    </LoadingTemplate>
</BitImage>

@code {
    [Parameter] public string? Src { get; set; }
    [Parameter] public string? Width { get; set; }
    [Parameter] public string? Class { get; set; }
}