@inherits AppComponentBase

<BitModal @bind-IsOpen="isOpen" Blocking AutoToggleScroll="false">
    <div class="main">
        <div class="header">
            <span class="title">@title</span>
            <BitButton IconName="@BitIconName.ChromeClose" OnClick="OnCloseClick" Variant="BitVariant.Text" />
        </div>
        <div class="body">
            @body
        </div>
        <div class="footer">
            <BitButton OnClick="OnOkClick">OK</BitButton>
        </div>
    </div>
</BitModal>
