@inherits AppComponentBase

<BitSpacer @onclick="HandleOnClick" Style="height:100%" />

@code {
    private int clickCount = 0;
    private async Task HandleOnClick()
    {
        if (++clickCount == 7)
        {
            clickCount = 0;
            PubSubService.Publish(PubSubMessages.SHOW_DIAGNOSTIC_MODAL);
        }
    }
}