					<AppAiChatPanel />
					@*#endif*@
					<AppSnackBar />
					<AppDiagnosticModal />
					<JobProgress />
					<BitModalContainer ModalParameters="ModalParameters" />
					<AppJsBridge />

				</CascadingValue>
			</CascadingValue>
		</CascadingValue>
	</CascadingValue>
</CascadingValue>
