	<CascadingValue Value="currentUser">
		<CascadingValue Value="currentTheme">
			<CascadingValue Value="currentRouteData">
				<CascadingValue Name="@Parameters.IsOnline" Value="IsOnline">

					<AppShell NavPanelItems="navPanelItems" IsIdentityPage="isIdentityPage">
