@inherits AppComponentBase;

<BitModal @bind-IsOpen="IsOpen">
    <div class="main-container">
        <div class="header">
            <span class="title">@Title</span>
            <BitIconButton IconName="BitIconName.ChromeClose" OnClick="@(() => Confirm(false))" />
        </div>
        <div class="body">
            @Message
        </div>
        <div class="btn-group">
            <BitButton ButtonStyle="BitButtonStyle.Primary" Style="margin-right: 0.5rem" OnClick="@(() => Confirm(true))">Yes</BitButton>
            <BitButton ButtonStyle="BitButtonStyle.Standard" OnClick="@(() => Confirm(false))">No</BitButton>
        </div>
    </div>
</BitModal>