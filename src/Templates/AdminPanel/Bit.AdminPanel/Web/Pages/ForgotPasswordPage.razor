@page "/forgot-password"

@inherits AppComponentBase;

<PageTitle>@AuthStrings.ForgotPasswordTitle</PageTitle>

<div class="page-container">
    <section class="page-section">
        <div class="bit-logo--white"></div>
        <div class="bg-img"></div>
        <div class="section-content">
            <h1 class="section-title">@AppStrings.StartupPageTitle</h1>
            <div class="section-desc">@AppStrings.StartupPageDescription</div>
        </div>
    </section>
    <section class="page-section">
        <EditForm Model="ForgotPasswordModel" OnValidSubmit="WrapHandled(Submit)" class="form">
            <DataAnnotationsValidator />
            @if (string.IsNullOrEmpty(ForgotPasswordMessage) is false)
            {
                <BitMessageBar MessageBarType="@ForgotPasswordMessageType" OnDismiss="() => ForgotPasswordMessage = null">@ForgotPasswordMessage</BitMessageBar>
            }
            <h2 class="form-title">@AuthStrings.ForgotPasswordTitle</h2>
            <div class="form-description">
                @AuthStrings.ForgotPasswordMessage
            </div>
            <div class="form-input-container">
                <BitTextField Label="@AuthStrings.Email"
                              Placeholder="@AuthStrings.Email"
                              Type="BitTextFieldType.Email"
                              @bind-Value="ForgotPasswordModel.Email" />
                <ValidationMessage For="@(() => ForgotPasswordModel.Email)" />
            </div>
            <BitButton Class="form-submit-button"
                       ButtonStyle="BitButtonStyle.Primary"
                       IsEnabled="IsSubmitButtonEnabled"
                       Title="@AuthStrings.Submit"
                       AriaLabel="@AuthStrings.Submit"
                       ButtonType="BitButtonType.Submit">
                @if (IsLoading)
                {
                    <BitSpinner Size="BitSpinnerSize.Small"></BitSpinner>
                }
                else
                {
                    <span>@AuthStrings.Submit</span>
                }
            </BitButton>
        </EditForm>
    </section>
</div>