@inherits AppComponentBase;

<div class="card-container">
    <div class="card">
        @if (IsLoading)
        {
            <BitSpinner Size="BitSpinnerSize.Large"></BitSpinner>
        }
        <div class="card-num">
            @Data.Last30DaysProductCount
        </div>
        <div class="card-title">@AppStrings.Last30DaysProductCount</div>
    </div>
    <div class="card">
        @if (IsLoading)
        {
            <BitSpinner Size="BitSpinnerSize.Large"></BitSpinner>
        }
        <div class="card-num">
            @Data.TotalProducts
        </div>
        <div class="card-title">@AppStrings.TotalProducts</div>
    </div>
    <div class="card">
        @if (IsLoading)
        {
            <BitSpinner Size="BitSpinnerSize.Large"></BitSpinner>
        }
        <div class="card-num">
            @Data.TotalCategories
        </div>
        <div class="card-title">@AppStrings.Last30DaysCategoryCount</div>
    </div>
    <div class="card">
        @if (IsLoading)
        {
            <BitSpinner Size="BitSpinnerSize.Large"></BitSpinner>
        }
        <div class="card-num">
            @Data.TotalCategories
        </div>
        <div class="card-title">@AppStrings.TotalCategories</div>
    </div>
</div>