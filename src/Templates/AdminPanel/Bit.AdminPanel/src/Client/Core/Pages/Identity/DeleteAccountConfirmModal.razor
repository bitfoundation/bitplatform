@inherits AppComponentBase

<BitModal @bind-IsOpen="IsOpen">
    <div class="main-container">
        <div class="header">
            <span class="title">@Localizer[nameof(AppStrings.DeleteAccount)]</span>
            <BitIconButton OnClick="CloseModal" IconName="@BitIconName.ChromeClose" Title="@Localizer[nameof(AppStrings.Close)]" />
        </div>
        <div class="body">@Localizer[nameof(AppStrings.DeleteAccountPrompt)]</div>
        <div class="btn-group">
            <BitButton ButtonStyle="BitButtonStyle.Primary" Style="margin-right: 0.5rem" OnClick="DeleteAccount">@Localizer[nameof(AppStrings.Yes)]</BitButton>
            <BitButton ButtonStyle="BitButtonStyle.Standard" OnClick="CloseModal">@Localizer[nameof(AppStrings.No)]</BitButton>
        </div>
    </div>
</BitModal>