@namespace AdminPanel.Client.Core
@inherits LayoutComponentBase

<div class="status-bar">AdminPanel</div>

<div class="main @(_isUserAuthenticated is false ? "main--full-page" : null)">
    @if (_isUserAuthenticated)
    {
        <Header OnToggleMenu=@ToggleMenuHandler />
        <NavMenu @bind-IsMenuOpen=@_isMenuOpen />
    }
    <div class="site-content">
        <AppErrorBoundary>
            @Body
        </AppErrorBoundary>
    </div>
    <Footer />
</div>

<MessageBox />