@inherits AppComponentBase;

<div class="card">
    <div class="card-header">
        <div class="title">
            @Localizer[nameof(AppStrings.ProductsPercentagePerCategory)]
        </div>
        <div class="subtitle">@Localizer[nameof(AppStrings.ProductsPercentagePerCategoryText)]</div>
    </div>
    <div class="card-body">
        @if (_isLoading)
        {
            <BitSpinner Size="BitSpinnerSize.Large"></BitSpinner>
        }
        else
        {
            <BitChart Config="_config" />
        }
    </div>
</div>