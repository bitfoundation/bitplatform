@inherits AppComponentBase;

<div class="card-container">
    <div class="card">
        <div class="card-num @(IsLoading ? "no-border" : null)">
            @if (IsLoading)
            {
                <BitSpinner Size="BitSpinnerSize.Large"></BitSpinner>
            }
            else
            {
                @Data.Last30DaysProductCount
            }
        </div>
        <div class="card-title">@Localizer[nameof(AppStrings.Last30DaysProductCount)]</div>
    </div>
