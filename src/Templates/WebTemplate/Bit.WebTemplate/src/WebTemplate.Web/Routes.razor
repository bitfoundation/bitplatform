<LayoutView Layout="@typeof(MainLayout)">
    <Router AppAssembly="@GetType().Assembly"
            OnNavigateAsync="@OnNavigateAsync">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData">
                <Authorizing>
                    <LoadingComponent Color="#FFF" />
                </Authorizing>
            </AuthorizeRouteView>
        </Found>
        <Navigating>
            <LoadingComponent Color="#FFF" />
        </Navigating>
    </Router>
</LayoutView>