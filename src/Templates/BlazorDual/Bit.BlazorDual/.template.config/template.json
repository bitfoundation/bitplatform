{
    "$schema": "http://json.schemastore.org/template",
    "author": "Bit Platform",
    "classifications": [
        "ASP.NET Core",
        "Blazor",
        "Web"
    ],
    "tags": {
        "language": "C#",
        "type": "solution"
    },
    "identity": "Bit.BlazorDual",
    "name": "Bit BlazorDual",
    "shortName": "bit-dual",
    "sourceName": "BlazorDual",
    "preferNameDirectory": true,
    "symbols": {
        "database": {
            "displayName": "Database",
            "type": "parameter",
            "datatype": "choice",
            "defaultValue": "SqlServer",
            "choices": [
                {
                    "choice": "SqlServer",
                    "description": "Sql Server"
                },
                {
                    "choice": "Sqlite",
                    "description": "Sqlite"
                },
                {
                    "choice": "Other",
                    "description": "Other"
                }
            ]
        }
    },
    "sources": [
        {
            "modifiers": [
                {
                    "copyOnly": [
                        "global.json",
                        "**.Web/Pages/Home.razor",
                        "**/*.scss",
                        "**/*.svg",
                        "**/*.png"
                    ],
                    "exclude": [
                        ".vs/**",
                        "**/[Bb]in/**",
                        "**/[Oo]bj/**",
                        ".template.config/**",
                        "**/*.filelist",
                        "**/*.user",
                        "**/*.lock.json",
                        "**/.git/**",
                        "**/*.nuspec",
                        "**/Migrations/**"
                    ]
                }
            ]
        }
    ]
}