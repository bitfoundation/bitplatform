{
    "$schema": "http://json.schemastore.org/template",
    "author": "bit platform",
    "classifications": [
        "ASP.NET Core",
        "Blazor",
        "Web"
    ],
    "tags": {
        "language": "C#",
        "type": "solution"
    },
    "identity": "Bit.BlazorWeb",
    "name": "bit BlazorWeb",
    "shortName": "bit-web",
    "sourceName": "BlazorWeb",
    "preferNameDirectory": true,
    "symbols": {
        "database": {
            "displayName": "Database",
            "type": "parameter",
            "datatype": "choice",
            "defaultValue": "SqlServer",
            "choices": [
                {
                    "choice": "SqlServer",
                    "description": "Sql Server"
                },
                {
                    "choice": "Sqlite",
                    "description": "Sqlite"
                },
                {
                    "choice": "Other",
                    "description": "Other"
                }
            ]
        },
        "pipeline": {
            "displayName": "CI-CD Pipeline",
            "type": "parameter",
            "datatype": "choice",
            "defaultValue": "GitHub",
            "choices": [
                {
                    "choice": "GitHub",
                    "description": "GitHub actions"
                },
                {
                    "choice": "Azure",
                    "description": "Azure DevOps pipelines"
                },
                {
                    "choice": "Other",
                    "description": "Other"
                }
            ]
        }
    },
    "sources": [
        {
            "modifiers": [
                {
                    "copyOnly": [
                        "global.json",
                        "**.Web/Pages/Home.razor",
                        "**/*.scss",
                        "**/*.svg",
                        "**/*.png"
                    ],
                    "exclude": [
                        ".vs/**",
                        "**/[Bb]in/**",
                        "**/[Oo]bj/**",
                        ".template.config/**",
                        "**/*.filelist",
                        "**/*.user",
                        "**/*.lock.json",
                        "**/.git/**",
                        "**/*.nuspec",
                        "**/Migrations/**"
                    ]
                },
                {
                    "condition": "(pipeline != GitHub)",
                    "exclude": [ ".github/**" ]
                },
                {
                    "condition": "(pipeline != Azure)",
                    "exclude": [ ".azure-devops/**" ]
                }
            ]
        }
    ]
}