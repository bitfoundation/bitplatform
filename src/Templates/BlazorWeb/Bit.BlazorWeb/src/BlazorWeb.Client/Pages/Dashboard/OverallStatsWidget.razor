@inherits AppComponentBase

<div class="card-container">
    <div class="card">
        <div class="card-num @(_isLoading ? "no-border" : null)">
            @if (_isLoading)
            {
                <BitSpinner Size="BitSpinnerSize.Large"></BitSpinner>
            }
            else
            {
                @_data.Last30DaysProductCount
            }
        </div>
