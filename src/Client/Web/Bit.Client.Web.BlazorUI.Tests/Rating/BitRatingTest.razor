<CascadingValue Value="Visual">
    <BitRating AllowZeroStars="AllowZeroStars"
               AriaLabel="@AriaLabel"
               AriaLabelFormat="@AriaLabelFormat"
               DefaultRating="DefaultRating"
               Icon="@Icon"
               IsEnabled="IsEnabled"
               IsReadOnly="IsReadOnly"
               Max="Max"
               @bind-Rating="Rating"
               Size="Size"
               UnselectedIcon="@UnselectedIcon" />
</CascadingValue>

@code {
    [Parameter] public bool AllowZeroStars { get; set; }
    [Parameter] public string AriaLabel { get; set; }
    [Parameter] public string? AriaLabelFormat { get; set; }
    [Parameter] public double? DefaultRating { get; set; }
    [Parameter] public string Icon { get; set; } = "FavoriteStarFill";
    [Parameter] public bool IsEnabled { get; set; }
    [Parameter] public bool IsReadOnly { get; set; }
    [Parameter] public int Max { get; set; }
    [Parameter] public double Rating { get; set; }
    [Parameter] public RatingSize Size { get; set; }
    [Parameter] public string UnselectedIcon { get; set; } = "FavoriteStar";
    [Parameter] public Visual Visual { get; set; }
}
