<CascadingValue Value="Visual">
    <BitPivot OverflowBehavior="OverflowBehavior"
              HeadersOnly="HeadersOnly"
              LinkFormat="LinkFormat"
              LinkSize="LinkSize"
              AriaLabel="@AriaLabel">
    </BitPivot>
</CascadingValue>

@code{
    [Parameter] public BitPivotOverflowBehavior OverflowBehavior { get; set; }
    [Parameter] public Visual Visual { get; set; }
    [Parameter] public bool HeadersOnly { get; set; }
    [Parameter] public BitPivotLinkFormat LinkFormat { get; set; }
    [Parameter] public BitPivotLinkSize LinkSize { get; set; }
    [Parameter] public RenderFragment ChildContent { get; set; }
    [Parameter] public string AriaLabel { get; set; }
}
