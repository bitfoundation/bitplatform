<CascadingValue Value="Visual">
    <BitProgressIndicator Label="@Label"
                          Description="@Description"
                          PercentComplete="@PercentComplete"
                          BarHeight="@BarHeight"
                          AriaValueText="@AriaValueText"
                          IsProgressHidden="@IsProgressHidden">
    </BitProgressIndicator>
</CascadingValue>

@code{
    [Parameter] public Visual Visual { get; set; }
    [Parameter] public string Label { get; set; }
    [Parameter] public string Description { get; set; }
    [Parameter] public double? PercentComplete { get; set; }
    [Parameter] public int BarHeight { get; set; } = 2;
    [Parameter] public string AriaValueText { get; set; } = string.Empty;
    [Parameter] public bool IsProgressHidden { get; set; }
}