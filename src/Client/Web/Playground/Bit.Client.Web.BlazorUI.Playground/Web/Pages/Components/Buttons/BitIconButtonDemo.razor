@page "/components/iconbutton"

@using Bit.Client.Web.BlazorUI.Playground.Web.Components

<ComponentPage ComponentName="Icon Button" OverviewDesc="Buttons give people a way to trigger an action. They’re typically found in forms, dialog panels, and dialogs.
    Some buttons are specialized for particular tasks, such as navigation, repeated actions, or presenting menus."
               ComponentParameters="componentParameters">
    <CodeSample Title="BitButton" Description="To create a icon button you can use a BitIconButton component.">
        <SampleContent>
            <div>
               <BitIconButton IconName="Emoji" />
               <BitIconButton IconName="EmojiDisappointed" AllowDisabledFocus="false" IsEnabled="false" />
               <BitIconButton IconName="Emoji2" Title="I'm Happy" />
            </div>
        </SampleContent>
        <CodeSampleContent>
             <div>
                <p>
                    &lt<span class="dark-green">BitIconButton IconName=</span>"Emoji2"><span>&lt/</span><span class="dark-green">BitIconButton</span><span>&gt;</span>
                </p>
                <p>
                    &lt<span class="dark-green">BitIconButton IconName=</span>"Emoji2" <span class="dark-green">AllowDisabledFocus=</span><span class="light-blue">"false"</span><span class="dark-green"> IsEnabled=</span><span class="light-blue">"false"></span><span>&lt/</span><span class="dark-green">BitIconButton</span><span>&gt;</span>
                </p>
                <p>
                    &lt<span class="dark-green">BitIconButton IconName=</span>"Emoji2"<span class="dark-green"> ToolTip=</span><span>"I'm Happy"><span>&lt/</span></span><span class="dark-green">BitIconButton</span><span>&gt;</span>
                </p>
             </div>
        </CodeSampleContent>
    </CodeSample>
    <CodeSample Title="Style & Class" Description="BitIconButton can directly get css class or inline style.">
      <SampleContent>
           <div>
              <BitIconButton IconName="Home" Style="color:red">
                  Styled Button
              </BitIconButton>
              <BitIconButton IconName="FileImage" Class="custom-button">
                  Classed Button
              </BitIconButton>
           </div>
      </SampleContent>
      <CodeSampleContent>
           <div>
              <p>
                &lt<span class="dark-green">BitIconButton Style=</span><span>"color:red" </span><span class="dark-green"> IconName=</span>"Home"> Styled Button<span>&lt/</span><span class="dark-green">BitIconButton</span><span>&gt;</span>
              </p>
              <p>
                &lt<span class="dark-green">BitIconButton Class=</span><span>"custom-button"</span><span class="dark-green"> IconName=</span>"FileImage"> Classed Button<span>&lt/</span><span class="dark-green">BitIconButton</span><span>&gt;</span>
              </p>
                <p>&lt<span class="light-blue">style></span></p>
                <p><span class="m-l-30 dark-yellow">.custom-button</span> {</p>
                <p><span class="m-l-45"><span class="light-blue">text-decoration</span> : underline;</span></p>
                <p><span class="m-l-45"><span class="light-blue">font-weight</span> : bolder;</span></p>
                <p><span class="m-l-45"><span class="light-blue">color</span> : #FFFFFF;</span></p>
                <p><span class="m-l-45"><span class="light-blue">background-color</span> : #823535;</span></p>
                <p><span class="m-l-45"><span class="light-blue">border-color</span> : #823535;</span></p>
                <p><span class="m-l-30">}</span></p>
                <p><span>&lt/</span><span class="light-blue">style</span><span>&gt;</span></p>
           </div>
     </CodeSampleContent>
    </CodeSample>
    <CodeSample Title="Visibility" Description="By setting Visibility attribute, BitIconButton can be Visible, Hidden or Collapsed.">
        <SampleContent>
            <div class="sample-btn">
               <BitIconButton IconName="List" Visibility="BitComponentVisibility.Visible">Visible Button</BitIconButton>
               <p><span>Hidden Button: </span>[<BitIconButton Visibility="BitComponentVisibility.Hidden">Hidden Button</BitIconButton>]</p>
               <p><span>Collapsed Button: </span>[<BitIconButton Visibility="BitComponentVisibility.Collapsed">Collapsed Button</BitIconButton>]</p>
            </div>
        </SampleContent>
        <CodeSampleContent>
             <p>
                 &lt<span class="dark-green">BitIconButton Visibility=</span>"<span class="light-green">ComponentVisibility</span>.Visible"<span><span class="dark-green"> IconName=</span>"List"></span><span>Visible Button</span><span>&lt/</span><span class="dark-green">BitIconButton</span><span>&gt;</span>
             </p>
             <p>
                 &lt<span class="dark-green">BitIconButton Hidden=</span>"<span class="light-green">ComponentHidden</span>.Hidden"<span><span class="dark-green"> IconName=</span>"List"></span><span>Hidden Button</span><span>&lt/</span><span class="dark-green">BitIconButton</span><span>&gt;</span>
             </p>
             <p>
                 &lt<span class="dark-green">BitIconButton Visibility=</span>"<span class="light-green">ComponentVisibility</span>.Collapsed"<span><span class="dark-green"> IconName=</span>"List"></span><span>Collapsed Button</span><span>&lt/</span><span class="dark-green">BitIconButton</span><span>&gt;</span>
             </p>
        </CodeSampleContent>
    </CodeSample>
     <CodeSample Title="Arias for Screen Reader" Description="Aria attribues can also set for a BitIconButton.">
        <SampleContent>
             <div>
                 <BitIconButton IconName="PowerButton" AriaDescription="Detailed description used for screen reader.">
                     Button with Aria Description
                 </BitIconButton>
                 <BitIconButton IconName="PowerButton" AriaHidden="true">
                     Button with Aria Hidden
                 </BitIconButton>
             </div>
        </SampleContent>
        <CodeSampleContent>
           <p>
               &lt<span class="dark-green">BitIconButton AriaDescription=</span><span>"Detailed description used for screen reader." <span class="dark-green"> IconName=</span>"PowerButton">Icon Button with Aria Description</span><span>&lt/</span><span class="dark-green">BitIconButton</span><span>&gt;</span>
           </p>
           <p>
               &lt<span class="dark-green">BitIconButton AriaHidden=</span><span class="light-blue">"true" </span><span class="dark-green"> IconName=</span>"PowerButton">Icon Button with Aria Hidden<span>&lt/</span><span class="dark-green">BitIconButton</span><span>&gt;</span>
           </p>
        </CodeSampleContent>
    </CodeSample>
     <CodeSample Title="Button-like Anchor" Description="BitButton can act as a link by setting Href and Target attributes.">
        <SampleContent>
              <div class="m-t-10">
                  <BitIconButton IconName="Website" Target="_blank" Href="https://github.com/bitfoundation/bitframework">
                      Open Bit Foundation In New Tab
                  </BitIconButton>
                  <BitIconButton IconName="Website" Href="https://github.com/bitfoundation/bitframework" ButtonStyle="ButtonStyle.Standard">
                      Go To Bit Foundation
                  </BitIconButton>
                  <BitIconButton IconName="Website" Target="_self" Href="https://github.com/bitfoundation/bitframework" IsEnabled="false">
                      <span>Bit Foundation From Span</span>
                  </BitIconButton>
              </div>
        </SampleContent>
        <CodeSampleContent>
           <p>
               &lt<span class="dark-green">BitIconButton</span><span class="dark-green"> IconName=</span>"Website"<span class="dark-green"> Target=</span><span>"_blank"</span><span class="dark-green"> Href=</span><span class="light-blue">"https://github.com/bitfoundation/bitframework"></span>Open Bit Foundation In New Tab<span>&lt/</span><span class="dark-green">BitIconButton</span><span>&gt;</span>
           </p>
           <p>
               &lt<span class="dark-green">BitIconButton</span><span class="dark-green"> IconName=</span>"Website"<span class="dark-green"> ButtonStyle=</span><span class="light-green">"ButtonStyle</span><span>.Standard"</span><span class="dark-green"> Href=</span><span class="light-blue">"https://github.com/bitfoundation/bitframework"></span>Go To Bit Foundation<span>&lt/</span><span class="dark-green">BitIconButton</span><span>&gt;</span>
           </p>
           <p>
               &lt<span class="dark-green">BitIconButton Target=</span><span>"_self"</span><span class="dark-green"> IconName=</span>"Website"<span class="dark-green"> Href=</span><span class="light-blue">"https://github.com/bitfoundation/bitframework"</span><span class="dark-green"> IsEnabled=</span><span class="light-blue">"false"&lt</span><span class="light-blue">span></span>Bit Foundation From Span<span class="light-blue">&ltspan></span><span>&lt/</span><span class="dark-green">BitIconButton</span><span>&gt;</span>
           </p>
        </CodeSampleContent>
    </CodeSample>
</ComponentPage>