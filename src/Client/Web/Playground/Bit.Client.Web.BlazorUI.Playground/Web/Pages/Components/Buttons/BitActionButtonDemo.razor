@page "/components/actionbutton"

@using Bit.Client.Web.BlazorUI.Playground.Web.Components

<ComponentPage ComponentName="Action Button" OverviewDesc="Buttons give people a way to trigger an action. They’re typically found in forms, dialog panels, and dialogs.
    Some buttons are specialized for particular tasks, such as navigation, repeated actions, or presenting menus."
               ComponentParameters="componentParameters">
    <CodeSample Title="BitActionButton" Description="BitActionButton component is a button that acts as a link.">
        <SampleContent>
            <div>
                <BitActionButton IconName="AddFriend">Create account</BitActionButton>
                <BitActionButton AllowDisabledFocus="false" IsEnabled="false" IconName="UserRemove">Remove user</BitActionButton>
            </div>
        </SampleContent>
        <CodeSampleContent>
            <div>
                <p>
                    &lt<span class="dark-green">BitActionButton IconName=</span>"AddFriend">Create account<span>&lt/</span><span class="dark-green">BitActionButton</span><span>&gt;</span>
                </p>
                <p>
                    &lt<span class="dark-green">BitActionButton IconName=</span>"UserRemove" <span class="dark-green">AllowDisabledFocus=</span><span class="light-blue">"false"</span><span class="dark-green"> IsEnabled=</span><span class="light-blue">"false"></span>Remove user<span>&lt/</span><span class="dark-green">BitActionButton</span><span>&gt;</span>
                </p>
            </div>
        </CodeSampleContent>
    </CodeSample>
    <CodeSample Title="Style & Class" Description="BitActionButton can directly get css class or inline style.">
        <SampleContent>
            <div>
                <BitActionButton Style="color:red">
                    Styled Action Button
                </BitActionButton>
                <BitActionButton Class="custom-button">
                    Classed Action Button
                </BitActionButton>
            </div>
        </SampleContent>
        <CodeSampleContent>
            <div>
                <p>
                    &lt<span class="dark-green">BitActionButton Style=</span><span>"color:red"</span><span>></span>Styled Action Button<span>&lt/</span><span class="dark-green">BitActionButton</span><span>&gt;</span>
                </p>
                <p>
                    &lt<span class="dark-green">BitActionButton Class=</span><span>"custom-button"</span><span>></span>Classed Action Button<span>&lt/</span><span class="dark-green">BitActionButton</span><span>&gt;</span>
                </p>
                <p>&lt<span class="light-blue">style></span></p>
                <p><span class="m-l-30 dark-yellow">.custom-button</span> {</p>
                <p><span class="m-l-45"><span class="light-blue">text-decoration</span> : underline;</span></p>
                <p><span class="m-l-45"><span class="light-blue">font-weight</span> : bolder;</span></p>
                <p><span class="m-l-45"><span class="light-blue">color</span> : #FFFFFF;</span></p>
                <p><span class="m-l-45"><span class="light-blue">background-color</span> : #823535;</span></p>
                <p><span class="m-l-45"><span class="light-blue">border-color</span> : #823535;</span></p>
                <p><span class="m-l-30">}</span></p>
                <p><span>&lt/</span><span class="light-blue">style</span><span>&gt;</span></p>
            </div>
        </CodeSampleContent>
    </CodeSample>
    <CodeSample Title="Visibility" Description="By setting Visibility attribute, BitActionButton can be Visible, Hidden or Collapsed.">
        <SampleContent>
            <div class="sample-btn">
                <BitActionButton IconName="AddEvent" Visibility="BitComponentVisibility.Visible">Add Event</BitActionButton>
               
                <div><span>Hidden Button: </span>[<BitActionButton Visibility="BitComponentVisibility.Hidden">Hidden Action Button</BitActionButton>]</div>
              
                <div><span>Collapsed Button: </span>[<BitActionButton Visibility="BitComponentVisibility.Collapsed">Collapsed Action Button</BitActionButton>]</div>
            </div>
        </SampleContent>
        <CodeSampleContent>
            <div>
                <p>
                    &lt<span class="dark-green">BitActionButton Visibility=</span>"<span class="light-green">ComponentVisibility</span>.Visible<span>"<span class="dark-green"> IconName=</span>"AddEvent"></span><span>Add Event</span><span>&lt/</span><span class="dark-green">BitActionButton</span><span>&gt;</span>
                </p>
                <p>
                    &lt<span class="dark-green">BitActionButton Hidden=</span>"<span class="light-green">ComponentHidden</span>.Hidden<span>"></span><span>Hidden Action Button</span><span>&lt/</span><span class="dark-green">BitActionButton</span><span>&gt;</span>
                </p>
                <p>
                    &lt<span class="dark-green">BitActionButton Visibility=</span>"<span class="light-green">ComponentVisibility</span>.Collapsed<span>"></span><span>Collapsed Action Button</span><span>&lt/</span><span class="dark-green">BitActionButton</span><span>&gt;</span>
                </p>
            </div>
        </CodeSampleContent>
    </CodeSample>
    <CodeSample Title="Arias for Screen Reader" Description="Aria attribues can also set for a BitActionButton.">
        <SampleContent>
            <div>
                <BitActionButton IconName="Library" AriaDescription="Detailed description used for screen reader.">
                    Action Button with Aria Description
                </BitActionButton>
                <BitActionButton IconName="Library" AriaHidden="true">
                    Action Button with Aria Hidden
                </BitActionButton>
            </div>
        </SampleContent>
        <CodeSampleContent>
            <p>
                &lt<span class="dark-green">BitActionButton AriaDescription=</span><span>"Detailed description used for screen reader." <span class="dark-green"> IconName=</span>"Library">Action Button with Aria Description</span><span>&lt/</span><span class="dark-green">BitActionButton</span><span>&gt;</span>
            </p>
            <p>
                &lt<span class="dark-green">BitActionButton AriaHidden=</span><span class="light-blue">"true"</span><span class="dark-green"> IconName=</span>"Library">Action Button with Aria Hidden<span>&lt/</span><span class="dark-green">BitActionButton</span><span>&gt;</span>
            </p>
        </CodeSampleContent>
    </CodeSample>
    <CodeSample Title="ActionButton-like Anchor" Description="BitActionButton can act as a link by setting Href and Target attribute, you define how to open your link.">
        <SampleContent>
            <div class="m-t-10">
                <BitActionButton IconName="Website" Target="_blank" Href="https://github.com/bitfoundation/bitframework">
                    Open Bit Foundation In New Tab
                </BitActionButton>
                <BitActionButton IconName="Website" Href="https://github.com/bitfoundation/bitframework" ButtonStyle="ButtonStyle.Standard">
                    Go To Bit Foundation
                </BitActionButton>
                <BitActionButton IconName="Website" Target="_self" Href="https://github.com/bitfoundation/bitframework" IsEnabled="false">
                    <span>Bit Foundation From Span</span>
                </BitActionButton>
            </div>
        </SampleContent>
        <CodeSampleContent>
            <p>
                &lt<span class="dark-green">BitActionButton</span><span class="dark-green"> IconName=</span>"Website"<span class="dark-green"> Target=</span><span>"_blank"</span><span class="dark-green"> Href=</span><span class="light-blue">"https://github.com/bitfoundation/bitframework"></span>Open Bit Foundation In New Tab<span>&lt/</span><span class="dark-green">BitActionButton</span><span>&gt;</span>
            </p>
            <p>
                &lt<span class="dark-green">BitActionButton</span><span class="dark-green"> IconName=</span>"Website"<span class="dark-green"> ButtonStyle=</span>"<span class="light-green">ButtonStyle</span><span>.Standard"</span><span class="dark-green"> Href=</span><span class="light-blue">"https://github.com/bitfoundation/bitframework"></span>Go To Bit Foundation<span>&lt/</span><span class="dark-green">BitActionButton</span><span>&gt;</span>
            </p>
            <p>
                &lt<span class="dark-green">BitActionButton Target=</span><span>"_self"</span><span class="dark-green"> IconName=</span>"Website"<span class="dark-green"> Href=</span><span class="light-blue">"https://github.com/bitfoundation/bitframework"</span><span class="dark-green"> IsEnabled=</span><span class="light-blue">"false"&lt</span><span class="light-blue">span></span>Bit Foundation From Span<span class="light-blue">&ltspan></span><span>&lt/</span><span class="dark-green">BitActionButton</span><span>&gt;</span>
            </p>
        </CodeSampleContent>
    </CodeSample>
</ComponentPage>