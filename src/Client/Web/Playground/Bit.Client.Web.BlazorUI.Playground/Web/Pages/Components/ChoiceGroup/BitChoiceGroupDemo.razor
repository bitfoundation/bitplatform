@page "/components/choice-group"

<ComponentDemo ComponentName="ChoiceGroup" ComponentDescription="Radio buttons (ChoiceGroup) let people select a single option from two or more choices."
               ComponentParameters="componentParameters">
    <ComponentExampleBox Title="BitChoiceGroup" ExampleSourceCodeForCopy="@choiceGroupSampleCode" ExampleId="example1">
        <ExamplePreview>
            <div class="example-desc">To create a choicegroup you can use a BitChoiceGroup component</div>
            <div class="ch-group">
                <BitLabel>Selected Key is : @MySelectedKey</BitLabel>
                <BitTextField @bind-Value="MySelectedKey" Placeholder="Select one of A, B or C"></BitTextField>
                <BitChoiceGroup Name="Group1" Label="Pick one" IsRequired="true" @bind-SelectedKey="MySelectedKey">
                    <BitChoiceOption Key="A" Text="Option A" Value="1"></BitChoiceOption>
                    <BitChoiceOption Key="B" Text="Option B" Value="2"></BitChoiceOption>
                    <BitChoiceOption Key="C" Text="Disabled option C" Value="3" IsEnabled="false"></BitChoiceOption>
                </BitChoiceGroup>
            </div>
        </ExamplePreview>
        <ExampleSourceCode>
            <pre class="code">
            <code class="html">&ltBitLabel>Selected Key is : &#64;MySelectedKey&lt/BitLabel>
&ltBitTextField &#64;bind-Value="MySelectedKey" Placeholder="Select one of A, B or C">&lt/BitTextField>
&ltBitChoiceGroup Name="Group1" Label="Pick one" IsRequired="true" &#64;bind-SelectedKey="MySelectedKey">
        &ltBitChoiceOption Key="A" Text="Option A" Value="1">&lt/BitChoiceOption>
        &ltBitChoiceOption Key="B" Text="Option B" Value="2">&lt/BitChoiceOption>
        &ltBitChoiceOption Key="C" Text="Disabled option C" Value="3" IsEnabled="false">&lt/BitChoiceOption>
&lt/BitChoiceGroup></code>

            <code class="csharp">&#64;code {
        private string MySelectedKey = "B";
}</code>
            </pre>
        </ExampleSourceCode>
    </ComponentExampleBox>

