@page "/components/carousel"


<h2>Carousel</h2>

<div class="card">
    <p class="desc">Carousel (Carousel slide-show) let people sehow their items in seperate slides from two or more items.</p>
</div>

<h2>Usage</h2>
<div class="wrapper">
    <div class="card">
        <h3>Caroulse & Carousel Item</h3>
        <div class="desc">
            <p>
                To create a Carousel you can use a Carousel component.
            </p>
        </div>

        <BitPivot>
            <BitPivotItem HeaderText="Example" IconName="ViewList">
                <div>
                    <BitCarousel>
                        <BitCarouselItem Style="background-color:red; height:200px; text-align:center; color:yellow;">1</BitCarouselItem>
                        <BitCarouselItem Style="background-color:brown; height:200px; text-align:center; color:yellow;">2</BitCarouselItem>
                        <BitCarouselItem Style="background-color:pink; height:200px; text-align:center; color:yellow;">3</BitCarouselItem>
                        <BitCarouselItem Style="background-color:green; height:200px; text-align:center; color:yellow;">4</BitCarouselItem>
                        <BitCarouselItem Style="background-color:blue; height:200px; text-align:center; color:yellow;">5</BitCarouselItem>
                    </BitCarousel>
                </div>
            </BitPivotItem>
            <BitPivotItem HeaderText="Code" IconName="Source">
                <div>
                    <p>&lt<span class="dark-green">BitCarousel</span>"></p>
                    <p class="p-l-20"> &lt<span class="dark-green">BitCarouselItem</span> <span class="dark-green">Style</span>="background-color:red; height:200px; text-align:center; color:yellow;" >1&lt/<span class="dark-green">BitCarouselItem</span>></p>
                    <p class="p-l-20"> &lt<span class="dark-green">BitCarouselItem</span> <span class="dark-green">Style</span>="background-color:brown; height:200px; text-align:center; color:yellow;" >1&lt/<span class="dark-green">BitCarouselItem</span>></p>
                    <p class="p-l-20"> &lt<span class="dark-green">BitCarouselItem</span> <span class="dark-green">Style</span>="background-color:pink; height:200px; text-align:center; color:yellow;" >1&lt/<span class="dark-green">BitCarouselItem</span>></p>
                    <p class="p-l-20"> &lt<span class="dark-green">BitCarouselItem</span> <span class="dark-green">Style</span>="background-color:green; height:200px; text-align:center; color:yellow;" >1&lt/<span class="dark-green">BitCarouselItem</span>></p>
                    <p class="p-l-20"> &lt<span class="dark-green">BitCarouselItem</span> <span class="dark-green">Style</span>="background-color:blue; height:200px; text-align:center; color:yellow;" >1&lt/<span class="dark-green">BitCarouselItem</span>></p>
                    <p> &lt/<span class="dark-green">BitCarousel</span>></p>
                </div>
            </BitPivotItem>
        </BitPivot>
    </div>
</div>
