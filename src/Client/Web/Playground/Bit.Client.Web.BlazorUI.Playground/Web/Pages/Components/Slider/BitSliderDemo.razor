@page "/components/slider"

<ComponentDemo ComponentName="Slider" ComponentDescription="A slider provides a visual indication of adjustable content, as well as the current setting in the total range of content. Use a slider when you want people to set defined values (such as volume or brightness), or when people would benefit from instant feedback on the effect of setting changes."
               ComponentParameters="componentParameters">
    <ComponentExampleBox Title="BitSlider" ExampleSourceCodeForCopy="@sliderSampleCode" ExampleId="example1">
        <ExamplePreview>
            <BitSlider />
            <BitSlider Label="Snapping Slider"
                       Min="0"
                       Max="50"
                       Step="10"
                       DefaultValue="20" />
            <BitSlider Label="Disabled"
                       Min="50"
                       Max="500"
                       Step="50"
                       DefaultValue="300"
                       IsEnabled="false" />
            <BitSlider Label="Controlled"
                       Max="10"
                       @bind-Value="sliderHorizontalValue" />
            <BitButton Class="bit-btn-slider" OnClick="() => sliderHorizontalValue = 7">Change Value</BitButton>
            <BitSlider Label="Formatted value"
                       Max="100"
                       DefaultValue="31"
                       ValueFormat="P00" />
            <BitSlider Label="Formatted Value"
                       Max="1000"
                       DefaultValue="319"
                       ValueFormat="P01" />
            <BitSlider Label="Origin From Zero"
                       Min="-5"
                       Max="5"
                       Step="1"
                       DefaultValue="2"
                       IsRanged="true"
                       IsOriginFromZero="true" />
        </ExamplePreview>
        <ExampleSourceCode>
            <pre>
            <code>&ltBitSlider />
&ltBitSlider Label="Snapping Slider"
           Min="0"
           Max="50"
           Step="10"
           DefaultValue="20" />
&ltBitSlider Label="Disabled"
           Min="50"
           Max="500"
           Step="50"
           DefaultValue="300"
           IsEnabled="false" />
&ltBitSlider Label="Controlled"
           Max="10"
           &#64;bind-Value="sliderHorizontalValue" />
&ltBitButton Class="bit-btn-slider" OnClick="() => sliderHorizontalValue = 7">Change Value&lt/BitButton>
&ltBitSlider Label="Formatted value"
           Max="100"
           DefaultValue="31"
           ValueFormat="P00" />
&ltBitSlider Label="Formatted Value"
           Max="1000"
           DefaultValue="319"
           ValueFormat="P01" />
&ltBitSlider Label="Origin From Zero"
           Min="-5"
           Max="5"
           Step="1"
           DefaultValue="2"
           IsRanged="true"
           IsOriginFromZero="true" /></code> 

            <code>&#64;code {
        private double? sliderHorizontalValue = 2;
}</code>
            </pre>
        </ExampleSourceCode>
    </ComponentExampleBox>

