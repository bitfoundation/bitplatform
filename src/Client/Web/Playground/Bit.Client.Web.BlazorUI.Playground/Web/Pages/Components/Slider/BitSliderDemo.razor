    <ComponentExampleBox Title="Range Slider" ExampleSourceCodeForCopy="@rangeSliderSampleCode" ExampleId="example3">
        <ExamplePreview>
            <div>
                <BitSlider Label="Range slider"
                           Min="0"
                           Max="10"
                           DefaultUpperValue="8"
                           DefaultLowerValue="2"
                           IsRanged="true" />
                <BitSlider Label="Disabled"
                           Min="50"
                           Max="500"
                           Step="50"
                           DefaultUpperValue="300"
                           IsRanged="true"
                           IsEnabled="false" />
                <BitSlider Label="Controlled example"
                           Max="10"
                           @bind-LowerValue="sliderRangedLowerValue"
                           @bind-UpperValue="sliderRangedUpperValue"
                           IsRanged="true" />
                <BitButton Class="bit-btn-slider" OnClick="ChangeBitSliderRangedValues">
                    Change Value
                </BitButton>
                <BitSlider Label="Formatted value"
                           Max="100"
                           IsRanged="true"
                           ValueFormat="P00" />
                <BitSlider Label="Origin from zero"
                           Min="-5"
                           Max="5"
                           Step="1"
                           DefaultUpperValue="2"
                           IsRanged="true"
                           IsOriginFromZero="true" />
            </div>
        </ExamplePreview>
        <ExampleSourceCode>
            <pre>
            <code>&ltBitSlider Label="Range slider"
           Min="0"
           Max="10"
           DefaultUpperValue="8"
           DefaultLowerValue="2"
           IsRanged="true" />
&ltBitSlider Label="Disabled"
           Min="50"
           Max="500"
           Step="50"
           DefaultUpperValue="300"
           IsRanged="true"
           IsEnabled="false" />
&ltBitSlider Label="Controlled example"
           Max="10"
           &#64;bind-LowerValue="sliderRangedLowerValue"
           &#64;bind-UpperValue="sliderRangedUpperValue"
           IsRanged="true" />
&ltBitButton Class="bit-btn-slider" OnClick="ChangeBitSliderRangedValues">Change Value&lt/BitButton>
&ltBitSlider Label="Formatted value"
           Max="100"
           IsRanged="true"
           ValueFormat="P00" />
&ltBitSlider Label="Origin from zero"
           Min="-5"
           Max="5"
           Step="1"
           DefaultUpperValue="2"
           IsRanged="true"
           IsOriginFromZero="true" /></code>

            <code>&#64;code {
        private double? sliderRangedLowerValue = 0;
        private double? sliderRangedUpperValue = 0;
        private void ChangeBitSliderRangedValues()
        {
                sliderRangedLowerValue = 3;
                sliderRangedUpperValue = 7;
        }
}</code>
            </pre>
        </ExampleSourceCode>
    </ComponentExampleBox>

