@page "/components/choicegroup"

@using Bit.Client.Web.BlazorUI.Playground.Web.Components

<ComponentPage ComponentName="ChoiceGroup" OverviewDesc="Radio buttons (ChoiceGroup) let people select a single option from two or more choices."
               ComponentParameters="componentParameters">
    <CodeSample Title="BitChoiceGroup" Description="To create a choicegroup you can use a BitChoiceGroup component">
        <SampleContent>
            <div class="ch-group">
                <BitLabel>Selected Key is : @MySelectedKey</BitLabel>
                <BitTextField @bind-Value="MySelectedKey" Placeholder="Select one of A, B or C"></BitTextField>
                <BitChoiceGroup Name="Group1" Label="Pick one" IsRequired="true" @bind-SelectedKey="MySelectedKey">
                    <BitChoiceOption Key="A" Text="Option A" Value="1"></BitChoiceOption>
                    <BitChoiceOption Key="B" Text="Option B" Value="2"></BitChoiceOption>
                    <BitChoiceOption Key="C" Text="Disabled option C" Value="3" IsEnabled="false"></BitChoiceOption>
                </BitChoiceGroup>
            </div>
        </SampleContent>
        <CodeSampleContent>
            <div>
                <p>&lt<span class="dark-green">BitLabel</span>>Selected Key is : <span class="light-yellow-bg">@@</span>MySelectedKey<span>&lt/</span><span class="dark-green">BitLabel</span><span>&gt;</span></p>
                <p>
                    &lt<span class="dark-green">BitTextField <span class="light-yellow-bg">@@</span>bind-Value</span>="MySelectedKey" <span class="dark-green">Placeholder</span>="Select one of A, B or C"><span>&lt/</span><span class="dark-green">BitTextField</span><span>&gt;</span>
                </p>
                <p>&lt<span class="dark-green">BitChoiceGroup Name</span>="Group1" <span class="dark-green">Label</span>="Pick one" <span class="dark-green">IsRequired</span>=<span class="light-blue">"true"</span>></p>
                <p class="m-l-40">&lt<span class="dark-green">BitChoiceOption</span> <span class="dark-green">Key</span>="A" <span class="dark-green">Text</span>="Option1" <span class="dark-green">Value</span>="1">&lt/<span class="dark-green">BitChoiceOption</span>></p>
                <p class="m-l-40"> &lt<span class="dark-green">BitChoiceOption</span> <span class="dark-green">Key</span>="B" <span class="dark-green">Text</span>="Option2" <span class="dark-green">Value</span>="2">&lt/<span class="dark-green">BitChoiceOption</span>></p>
                <p class="m-l-40"> &lt<span class="dark-green">BitChoiceOption</span> <span class="dark-green">Key</span>="C" <span class="dark-green">Text</span>="Disabled Option" <span class="dark-green">Value</span>="3" <span class="dark-green">IsEnabled</span>=<span class="light-blue">"false"</span>>&lt/<span class="dark-green">BitChoiceOption</span>></p>
                <p> &lt/<span class="dark-green">BitChoiceGroup</span>></p>
                <p><span class="light-yellow-bg">&#64;code {</span></p>
                <p class="m-l-70"><span class="light-blue">private string </span> MySelectedKey = <span class="dark-orange">"B"</span></p>
                <p><span class="light-yellow-bg">}</span></p>
            </div>
        </CodeSampleContent>
    </CodeSample>
