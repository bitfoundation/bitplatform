    <CodeSample Title="Value two-way binding" Description="" CodeSampleContentForCopy="@datePickerWithTwoWayBindingSampleCode">
        <SampleContent>
            <div>
                <BitDatePicker @bind-Value="@selectedDate" Style="width: 300px"></BitDatePicker>
                <BitLabel>this is selected date: @selectedDate</BitLabel>
            </div>
        </SampleContent>
        <CodeSampleContent>
            <pre>
                &lt<span class="soco-component-attr">BitDatePicker </span><span class="soco-code">&#64</span>bind-Value="selectedDate"
                                               <span class="soco-component-attr">Style</span>="width: 300px">
                &lt/<span class="soco-component-attr">BitDatePicker</span>>
                &lt<span class="soco-component-attr">BitLabel </span>>this is selected date: <span class="soco-code">&#64</span>selectedDate &lt/<span class="soco-component-attr">BitLabel</span>>
                <span class="soco-code">&#64code {</span>
                      <span class="soco-tag-type-def">private string</span> selectedDate ="";
                <span class="soco-code">}</span>
            </pre>
        </CodeSampleContent>
    </CodeSample>
    <CodeSample Title="DatePicker with custom date formatting" Description="" CodeSampleContentForCopy="@datePickerWithcustomFormattingSampleCode">
        <SampleContent>
            <div>
                <BitDatePicker OnSelectDate="OnDateFormat" Style="width: 300px"></BitDatePicker>
            </div>
        </SampleContent>
        <CodeSampleContent>
            <pre>
                &lt<span class="soco-component-attr">BitDatePicker<span class="soco-component-attr"> OnSelectDate</span> </span>="OnDateFormat"
                                               <span class="soco-component-attr">Style</span>="width: 300px">
                &lt/<span class="soco-component-attr">BitDatePicker</span>>
                <span class="soco-code">&#64code {</span>
                      <span class="soco-tag-type-def">private string</span> OnDateFormat(BitDate date) => $"{date.GetDate()}/{date.GetMonth()}/{date.GetYear()}";
                <span class="soco-code">}</span>
            </pre>
        </CodeSampleContent>
    </CodeSample>
</ComponentPage>