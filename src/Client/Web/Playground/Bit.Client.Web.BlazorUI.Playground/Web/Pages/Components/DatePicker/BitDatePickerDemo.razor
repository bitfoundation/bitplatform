    <CodeSample Title="Shamsi BitDatePicker" Description="" CodeSampleContentForCopy="@shamsiDatePickerSampleCode">
        <SampleContent>
            <div>
                <BitDatePicker CalendarType="BitCalendarType.Persian"
                               Style="width: 300px"
                               FirstDayOfWeek="DayOfWeek.Saturday">
                </BitDatePicker>
            </div>
        </SampleContent>
        <CodeSampleContent>
            <pre>
                 &lt<span class="soco-component-attr">BitDatePicker CalendarType</span>="CalendarType.Persian"
                                                <span class="soco-component-attr">Style</span>="width: 300px"
                                                <span class="soco-component-attr">FirstDayOfWeek</span>="DayOfWeek.Saturday">
