@page "/components/toggle"

@using Bit.Client.Web.BlazorUI.Playground.Web.Components

<ComponentPage ComponentName="Toggle" OverviewDesc="A toggle represents a physical switch that allows someone to choose between two mutually exclusive options.  For example, “On/Off”, “Show/Hide”. Choosing an option should produce an immediate result."
               ComponentParameters="componentParameters">
    <CodeSample Title="BitToggle" Description="" CodeSampleContentForCopy="@toggleSampleCode">
        <SampleContent>
            <div>
                <BitToggle Label="Enabled And Checked" @bind-IsChecked="IsToggleChecked" IsEnabled="true" OnText="On" OffText="Off" />
            </div>
            <div>
                <BitToggle Label="Enabled And Unchecked" @bind-IsChecked="IsToggleUnChecked" IsEnabled="true" OnText="On" OffText="Off" />
            </div>
            <div>
                <BitToggle Label="Disabled And Checked" IsChecked="true" IsEnabled="false" OnText="On" OffText="Off" />
            </div>
            <div>
                <BitToggle Label="Disabled And Unchecked" IsChecked="false" IsEnabled="false" OnText="On" OffText="Off" />
            </div>
            <div class="m-t-15">
                <BitToggle Label="With Inline Label" @bind-IsChecked="IsToggleUnChecked" IsEnabled="true" IsInlineLabel="true" OnText="On" OffText="Off" />
            </div>
            <div class="m-t-15">
                <BitToggle Label="Disabled With Inline Label" IsChecked="false" IsEnabled="false" IsInlineLabel="true" OnText="On" OffText="Off" />
            </div>
            <div class="m-t-15">
                <BitToggle Label="With Inline Label And Without OnText And OffText" @bind-IsChecked="IsToggleUnChecked" IsEnabled="true" IsInlineLabel="true" />
            </div>
            <div class="m-t-15">
                <BitToggle Label="Disabled With Inline Label And Without OnText And OffText" IsChecked="false" IsEnabled="false" IsInlineLabel="true" />
            </div>
            <div>
                <BitToggle Label="Enabled And Checked (ARIA 1.0 compatible)" @bind-IsChecked="IsToggleChecked" IsEnabled="true" OnText="On" OffText="Off" Role="Checkbox" />
            </div>
        </SampleContent>
        <CodeSampleContent>
            <pre>
               &lt<span class="soco-component-attr">BitToggle Label</span>="Enabled And Checked"
                                     <span class="soco-code">&#64;</span><span class="soco-component-attr">bind-IsChecked="</span><span class="soco-code">@@</span>IsToggleChecked"
                                     <span class="soco-component-attr">IsEnabled=</span><span class="soco-tag-type-def">"true"</span>
                                     <span class="soco-component-attr">OnText</span>="On"
                                     <span class="soco-component-attr"> OffText</span>="Off">
               &lt/<span class="soco-component-attr">BitToggle</span>&gt;
               &lt<span class="soco-component-attr">BitToggle Label</span>="Enabled And Unchecked"
                                     <span class="soco-code">&#64;</span><span class="soco-component-attr">bind-IsChecked="</span><span class="soco-code">@@</span>IsToggleUnChecked"
                                     <span class="soco-component-attr">IsEnabled=</span><span class="soco-tag-type-def">"true"</span>
                                     <span class="soco-component-attr">OnText</span>="On"
                                     <span class="soco-component-attr">OffText</span>="Off">
               &lt/<span class="soco-component-attr">BitToggle</span>&gt;
               &lt<span class="soco-component-attr">BitToggle Label</span>="Disabled And Checked"
                                     <span class="soco-component-attr">IsChecked="</span><span class="soco-tag-type-def">true"</span>
                                     <span class="soco-component-attr">IsEnabled=</span><span class="soco-tag-type-def">"false"</span>
                                     <span class="soco-component-attr">OnText</span>="On"
                                     <span class="soco-component-attr">OffText</span>="Off">
               &lt/<span class="soco-component-attr">BitToggle</span>&gt;
               &lt<span class="soco-component-attr">BitToggle Label</span>="Disabled And Unchecked"
                                     <span class="soco-component-attr">IsChecked="</span><span class="soco-tag-type-def">false"</span>
                                     <span class="soco-component-attr">IsEnabled=</span><span class="soco-tag-type-def">"false"</span>
                                     <span class="soco-component-attr">OnText</span>="On"
                                     <span class="soco-component-attr">OffText</span>="Off">
               &lt/<span class="soco-component-attr">BitToggle</span>&gt;
               &lt<span class="soco-component-attr">BitToggle Label</span>="With Inline Label"
                                     <span class="soco-code">&#64;</span><span class="soco-component-attr">bind-IsChecked="</span><span class="soco-code">@@</span>IsToggleUnChecked"
                                     <span class="soco-component-attr">IsEnabled=</span><span class="soco-tag-type-def">"true"</span>
                                     <span class="soco-component-attr">IsInlineLabel=</span><span class="soco-tag-type-def">"true"</span>
                                     <span class="soco-component-attr">OnText</span>="On"
                                     <span class="soco-component-attr">OffText</span>="Off">
               &lt/<span class="soco-component-attr">BitToggle</span>&gt;
               &lt<span class="soco-component-attr">BitToggle Label</span>="Disabled With Inline Label"
                                     <span class="soco-component-attr">IsChecked="</span><span class="soco-tag-type-def">false"</span>
                                     <span class="soco-component-attr">IsEnabled=</span><span class="soco-tag-type-def">"false"</span>
                                     <span class="soco-component-attr">IsInlineLabel=</span>"<span class="soco-tag-type-def">true</span>"
                                     <span class="soco-component-attr">OnText</span>="On"
                                     <span class="soco-component-attr">OffText</span>="Off">
               &lt/<span class="soco-component-attr">BitToggle</span>&gt;
               &lt<span class="soco-component-attr">BitToggle Label</span>="With Inline Label And Without OnText And OffText"
                                     <span class="soco-code">&#64;</span><span class="soco-component-attr">bind-IsChecked="</span><span class="soco-code">@@</span>IsToggleUnChecked"
                                     <span class="soco-component-attr">IsEnabled=</span><span class="soco-tag-type-def">"true"</span>
                                     <span class="soco-component-attr">IsInlineLabel=</span>"<span class="soco-tag-type-def">true</span>">
               &lt/<span class="soco-component-attr">BitToggle</span>&gt;
               &lt<span class="soco-component-attr">BitToggle Label</span>="Disabled With Inline Label And Without OnText And OffText"
                                     <span class="soco-component-attr">IsChecked=</span><span class="soco-tag-type-def">"false"</span>
                                     <span class="soco-component-attr">IsEnabled=</span><span class="soco-tag-type-def">"false"</span>
                                     <span class="soco-component-attr">IsInlineLabel=</span><span class="soco-tag-type-def">"true"</span>>
               &lt/<span class="soco-component-attr">BitToggle</span>&gt;
               &lt<span class="soco-component-attr">BitToggle Label</span>="Enabled And Checked (ARIA 1.0 compatible)"
                                     <span class="soco-code">&#64;</span><span class="soco-component-attr">bind-IsChecked="</span><span class="soco-code">@@</span>IsToggleChecked"
                                     <span class="soco-component-attr">IsEnabled=</span><span class="soco-tag-type-def">"true"</span>
                                     <span class="soco-component-attr">OnText</span>="On"
                                     <span class="soco-component-attr">OffText</span>="Off"
                                     <span class="soco-component-attr">Role=</span>"Checkbox">
               &lt/<span class="soco-component-attr">BitToggle</span>&gt;
               <span class="soco-code">&#64;code {</span>
                     <span class="soco-tag-type-def">private bool </span>IsToggleChecked = <span class="soco-tag-type-def">true</span>;
                     <span class="soco-tag-type-def">private bool </span>IsToggleUnChecked = <span class="soco-tag-type-def">false</span>;
               <span class="soco-code">}</span>
            </pre>
        </CodeSampleContent>
    </CodeSample>
    <CodeSample Title="Toggles With Custom Labels" Description="" CodeSampleContentForCopy="@customLabelSampleCode">
        <SampleContent>
            <div class="m-t-15">
                <BitToggle @bind-IsChecked="IsToggleUnChecked" IsEnabled="true" OnText="On" OffText="Off">
                    <LabelFragment>
                        Custom Inline Label
                    </LabelFragment>
                </BitToggle>
                </div>
                <div class="m-t-15">
                    <BitToggle @bind-IsChecked="BindedIsToggleUnChecked" IsEnabled="true" OnText="On" OffText="Off" IsInlineLabel="true">
                        <LabelFragment>
                            Custom Inline Label
                        </LabelFragment>
                    </BitToggle>
                <div class="m-t-15">
                    <BitButton Class="m-t-15" OnClick="() => BindedIsToggleUnChecked = true">Make Toggle Check</BitButton>
                </div>
                  </div>
        </SampleContent>
        <CodeSampleContent>
            <pre>
                &lt<span class="soco-component-attr">BitToggle </span><span class="soco-code">&#64;</span><span class="soco-component-attr">bind-IsChecked="</span><span class="soco-code">@@</span>IsToggleUnChecked"
                                      <span class="soco-component-attr">IsEnabled=</span><span class="soco-tag-type-def">"true"</span>
                                      <span class="soco-component-attr">OnText</span>="On"
                                      <span class="soco-component-attr">OffText</span>="Off">
                         &lt<span class="soco-component-attr">LabelFragment></span>
                                  Custom Inline Label
                         &lt/<span class="soco-component-attr">LabelFragment</span>&gt;
                &lt/<span class="soco-component-attr">BitToggle</span>&gt;
                &lt<span class="soco-component-attr">BitToggle</span><span class="soco-code">&#64;</span><span class="soco-component-attr">bind-IsChecked="</span><span class="soco-code">@@</span>BindedIsToggleUnChecked"
                                      <span class="soco-component-attr">IsEnabled=</span><span class="soco-tag-type-def">"true"</span>
                                      <span class="soco-component-attr">OnText</span>="On"
                                      <span class="soco-component-attr">OffText</span>="Off"
                                      <span class="soco-component-attr">IsInlineLabel=</span><span class="soco-tag-type-def">"true"</span>>
                          &lt<span class="soco-component-attr">LabelFragment></span>
                                   Custom Inline Label
                          &lt/<span class="soco-component-attr">LabelFragment</span>&gt;
                &lt/<span class="soco-component-attr">BitToggle</span>&gt;
                &lt<span class="soco-component-attr">BitButton OnClick</span>="() => BindedIsToggleUnChecked = <span class="soco-tag-type-def">true</span>">
                          Make Toggle Check
                &lt/<span class="soco-component-attr">BitButton</span>&gt;
                <span class="soco-code">&#64;code {</span>
                      <span class="soco-tag-type-def">private bool </span>BindedIsToggleUnChecked = <span class="soco-tag-type-def">false</span>;
                      <span class="soco-tag-type-def">private bool </span>IsToggleUnChecked = <span class="soco-tag-type-def">false</span>;
                <span class="soco-code">}</span>
            </pre>
        </CodeSampleContent>
    </CodeSample>
</ComponentPage>