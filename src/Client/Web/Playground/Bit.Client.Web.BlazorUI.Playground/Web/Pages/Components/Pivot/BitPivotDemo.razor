        <SampleContent>
            <BitPivot>
                <BitPivotItem HeaderText="File">
                    Pivot #1
                </BitPivotItem>
                <BitPivotItem HeaderText="Shared with me">
                    Pivot #2
                </BitPivotItem>
                <BitPivotItem HeaderText="Recent">
                    Pivot #3
                </BitPivotItem>
            </BitPivot>
        </SampleContent>
