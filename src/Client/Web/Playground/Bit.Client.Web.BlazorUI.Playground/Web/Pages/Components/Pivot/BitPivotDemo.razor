                &lt;/<span class="soco-component-attr">BitPivot</span>&gt;
                <span class="soco-code">&#64;</span><span class="soco-if-for">if</span> (SelectedKey == <span class="soco-string">"Foo"</span>)
                <span>{</span>
                       &lt;<span class="soco-tag-type-def">div></span>Hello I am Foo<span>&lt;/</span><span class="soco-tag-type-def">div</span>&gt;
                <span>}</span>
                <span class="soco-if-for">else if </span>(SelectedKey == <span class="soco-string">"Bar"</span>)
                <span>{</span>
                       &lt;<span class="soco-tag-type-def">div></span>Hello I am Bar<span>&lt;/</span><span class="soco-tag-type-def">div</span>&gt;
                <span>}</span>
                <span class="soco-if-for">else if </span>(SelectedKey == <span class="soco-string">"Bas"</span>)
                <span>{</span>
                       &lt;<span class="soco-tag-type-def">div></span>Hello I am Bas<span>&lt;/</span><span class="soco-tag-type-def">div</span>&gt;
                <span>}</span>
                <span class="soco-if-for">else if </span>(SelectedKey == <span class="soco-string">"Biz"</span>)
