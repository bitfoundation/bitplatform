                &lt;<span class="soco-component-attr">BitButton OnClick</span>="(() => OverridePivotSelectedKey = (((<span class="soco-tag-type-def">int</span>.<span class="dark-yellow">Parse</span>(OverridePivotSelectedKey) + 3 - 1) % 3)).<span>ToString</span>())">prev<span>&lt;/</span><span class="soco-component-attr">BitButton</span>&gt;
                &lt;<span class="soco-component-attr">BitButton OnClick</span>="(() => OverridePivotSelectedKey = (((<span class="soco-tag-type-def">int</span>.Parse(OverridePivotSelectedKey) + 1 ) % 3)).<span class="dark-yellow">ToString</span>())">next<span>&lt;/</span><span class="soco-component-attr">BitButton</span>&gt;
