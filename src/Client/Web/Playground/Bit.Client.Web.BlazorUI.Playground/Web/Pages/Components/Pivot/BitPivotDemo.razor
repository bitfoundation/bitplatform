            <pre>
                &lt;<span class="soco-component-attr">BitPivot LinkFormat</span>="<span class="soco-code">&#64;</span>LinkFormat.Tabs"
                                   <span class="soco-component-attr">LinkSize</span>="<span class="soco-code">&#64;</span>LinkSize.Large"
                                   <span class="soco-component-attr">OnLinkClick</span>="<span class="soco-code">&#64;</span>(item => SelectedKey = item.Key)"<span>&gt;</span>
                          &lt;<span class="soco-component-attr">BitPivotItem HeaderText</span> ="Foo" <span class="soco-component-attr">Key</span>="Foo">&lt;/<span class="soco-component-attr">BitPivotItem</span>&gt;
                          &lt;<span class="soco-component-attr">BitPivotItem HeaderText</span> ="Bar" <span class="soco-component-attr">Key</span>="Bar">&lt;/<span class="soco-component-attr">BitPivotItem</span>&gt;
                          &lt;<span class="soco-component-attr">BitPivotItem HeaderText</span> ="Bas" <span class="soco-component-attr">Key</span>="Bas">&lt;/<span class="soco-component-attr">BitPivotItem</span>&gt;
