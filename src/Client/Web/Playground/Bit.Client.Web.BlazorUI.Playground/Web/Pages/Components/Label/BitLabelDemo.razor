@page "/components/label"

<ComponentDemo ComponentName="Label" ComponentDescription="Labels give a name or title to a control or group of controls, including text fields, check boxes, combo boxes, radio buttons, and drop-down menus."
               ComponentParameters="componentParameters">
    <ComponentExampleBox Title="BitLabel" ExampleSourceCodeForCopy="@labelSampleCode" ExampleId="example1">
        <ExamplePreview>
            <div class="example-desc">To create a label you can use a BitLabel component.</div>
            <div>
                <BitLabel>I'm a Label</BitLabel>
                <BitLabel IsEnabled="false">I'm a disabled Label</BitLabel>
                <BitLabel IsRequired="true">I'm a required Label</BitLabel>
                <BitLabel For="labels-container__input">A Label for An Input</BitLabel>
                <input type="text" name="labels-container__input" id="labels-container__input" />
            </div>
        </ExamplePreview>
        <ExampleSourceCode>
            <pre class="code">
            <code class="html">&ltBitLabel>I'm a Label&lt/BitLabel>
&ltBitLabel IsEnabled="false">I'm a disabled Label&lt/BitLabel>
&ltBitLabel IsRequired="true">I'm a required Label&lt/BitLabel>
&ltBitLabel For="labels-container__input">A Label for An Input&lt/BitLabel>
&ltinput type="text" name="labels-container__input" id="labels-container__input" /></code>
            </pre>
        </ExampleSourceCode>
    </ComponentExampleBox>
</ComponentDemo>