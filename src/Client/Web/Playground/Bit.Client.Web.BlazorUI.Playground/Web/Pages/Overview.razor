@page "/components/demo"

<div class="overview-container">
    <div class="toggle-container">
        <div class="toggle-title">
            <img @onclick="ToggleMenu" src="/images/icon/menu-icon.svg" />
            <h2>Components</h2>
        </div>
        <div class="toggle-description">Click on the button to see a list of all components</div>
    </div>
    <h4>Bit's native UI Components for Blazor</h4>
    <p class="page-description">Using the Bit’s native Blazor UI components that are easy-to-customize and work on all Blazor modes (WASM, Server, Hybrid, pre-rendering), save time and make working enjoyable.</p>
    <div class="box-container">
        <div class="box">
            <img src="/images/icon/input-icon.svg" />
            <div class="title">Basic Inputs</div>
            <BitLink Href="/components/button" AriaLabel="inputs">
                <div class="footer">
                    Button, Checkbox, Toggle, ...
                </div>
            </BitLink>
        </div>
        <div class="box">
            <img src="/images/icon/pickers-icon.svg" />
            <div class="title">Galleries & Pickers</div>
            <BitLink Href="/components/datepicker" AriaLabel="pickers">
                <div class="footer">
                    DatePicker, ColorPicker, ...
                </div>
            </BitLink>
        </div>
        <div class="box">
            <img src="/images/icon/lists-icon.svg" />
            <div class="title">Items & Lists</div>
            <BitLink Href="/components/basiclist" AriaLabel="items">
                <div class="footer">
                    BasicList, DetailsList, ...
                </div>
            </BitLink>
        </div>
        <div class="box">
            <img src="/images/icon/navs-icon.svg" />
            <div class="title">Commands, Menus & Navs</div>
            <BitLink Href="/components/nav" AriaLabel="nav">
                <div class="footer">
                    Navs, Pivot, CommandBar, ...
                </div>
            </BitLink>
        </div>
        <div class="box">
            <img src="/images/icon/notifications-icon.svg" />
            <div class="title">Notification & Engagement</div>
            <BitLink Href="/components/messagebar" AriaLabel="notification">
                <div class="footer">
                    Coachmark , MessageBar, ...
                </div>
            </BitLink>
        </div>
        <div class="box">
            <img src="/images/icon/progrss-icon.svg" />
            <div class="title">Progress</div>
            <BitLink Href="/components/spinner" AriaLabel="progress">
                <div class="footer">
                    Spinner, ProgressIndicator, ...
                </div>
            </BitLink>
        </div>
        <div class="box">
            <img src="/images/icon/surfaces-icon.svg" />
            <div class="title">Surfaces</div>
            <BitLink Href="/components/modal" AriaLabel="surfaces">
                <div class="footer">
                    Dialog, Modal, Panel, ...
                </div>
            </BitLink>
        </div>
        <div class="box">
            <img src="/images/icon/utilities-icon.svg" />
            <div class="title">Utilities</div>
            <BitLink Href="#" AriaLabel="utilites">
                <div class="footer">
                    FoucusZone, Keytips, ...
                </div>
            </BitLink>
        </div>
        <div class="box">
            <img src="/images/icon/references-icon.svg" />
            <div class="title">References</div>
            <BitLink Href="#" AriaLabel="refrences">
                <div class="footer">
                    Autofill, Check, Point, ...
                </div>
            </BitLink>
        </div>
    </div>
</div>