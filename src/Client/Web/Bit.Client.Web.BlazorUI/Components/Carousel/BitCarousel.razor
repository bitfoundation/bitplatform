@namespace Bit.Client.Web.BlazorUI
@inherits BitComponentBase

<div @ref="RootElement"
     @attributes="HtmlAttributes"
     style="@StyleBuilder.Value"
     class="@ClassBuilder.Value">

    <CascadingValue Value="this"
                    IsFixed="true">
        <div class="bit-crsl-item">
            @ChildContent
        </div>
    </CascadingValue>
    <div class="bit-crsl-dots"></div>
    <div class="bit-crsl-buttons">
        <div class="bit-crsl-next-btn">
            <i class="bit-icon bit-icon--ChevronLeft"></i>
        </div>
        <div class="bit-crsl-previuse-btn">
            <i class="bit-icon bit-icon--ChevronRight"></i>
        </div>
    </div>
</div>