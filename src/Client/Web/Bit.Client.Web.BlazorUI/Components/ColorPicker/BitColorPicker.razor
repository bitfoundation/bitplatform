@namespace Bit.Client.Web.BlazorUI
@inherits BitComponentBase

<div @ref="RootElement"
     style="@StyleBuilder.Value"
     class="@ClassBuilder.Value">
    <div @ref="SaturationPickerRef"
         @onmousedown="OnSaturationPickerMouseDown">
        <div></div>
        <div style=@($"background-color: {SaturationPickerBackground.ToRgb().ToCss()}")></div>
        <div style=@($"top: {SaturationPickerThumbPosition?.Top}px; left: {SaturationPickerThumbPosition?.Left}px; background: {MainColor.ToRgbaCss()};")>
        </div>
    </div>

    <div>
        <div>
            <div>
                <input type="range" min="0" max="360" value="@Hue" @oninput="PickMainColor">
            </div>

            <div style=@($"display: {(AlphaType is not AlphaType.None? "block" : "none")};")>
                <div style=@($"background:linear-gradient(to left,{SaturationPickerBackground.ToRgb().ToCss()} 0%, transparent 100%)")>
                    <input type="range" min="0" max="100" value="@(MainColor.Alpha * 100)" @oninput="PickAlphaColor">
                </div>
            </div>
        </div>
        <div style=@($"background: {MainColor.ToRgbaCss()}; display: {(ShowPreview ? "block" : "none")}")>
        </div>
    </div>
</div>