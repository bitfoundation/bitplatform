@namespace Bit.Client.Web.BlazorUI
@inherits BitComponentBase

<div @ref="RootElement"
     @attributes="HtmlAttributes"
     style="@StyleBuilder.Value"
     class="@ClassBuilder.Value"
     id="@UniqueId.ToString()">
    <div class="bit-dtp-wrapper"
         aria-owns="@(IsOpen ? CalloutId : null)"
         @onclick="HandleClick">
        <BitTextField Class="@(AllowTextInput ? "editable-input" : "")"
                      IsEnabled="IsEnabled"
                      role="combobox"
                      Label="@Label"
                      aria-expanded="@(IsOpen ? "true" : "false")"
                      AriaLabel="@AriaLabel"
                      aria-haspopup="dialog"
                      aria-controls="@(IsOpen ? CalloutId : null)"
                      Placeholder="@Placeholder"
                      HasBorder="@HasBorder"
                      IsUnderlined="@IsUnderlined"
                      tabindex="@TabIndex"
                      IsReadonly="@(!AllowTextInput)"
                      IconName="CalendarMirrored"
                      IsMultiline="false"
                      OnFocusIn="HandleFocusIn"
                      OnFocusOut="HandleFocusOut"
                      @bind-Value="@selectedDate">
        </BitTextField>
    </div>
    @if (IsOpen)
    {
        <div class="bit-dtp-overlay"
         @onclick="CloseCallout"></div>

        <div class="bit-dtp-callout">
            <div class="bit-dtp-callout-main" role="dialog">
                <div aria-hidden="true" tabindex="0" data-is-visible="true" style="pointer-events: none; position: fixed;"></div>
                <div class="bit-dtp-group"
                 role="group"
                 aria-label="">
                    <div aria-live="polite" aria-atomic="true">Selected date @selectedDate</div>
                    <div class="day-picker-wrapper">
                        <div class="picker-header">
                            @if (ShowMonthPickerAsOverlay)
                            {
                                <button class="header-title" aria-label="@($"{monthTitle}, change month")"
                                aria-live="polite" aria-atomic="true" tabindex="0" type="button">
                                    <span id="@MonthAndYearId">@monthTitle</span>
                                </button>
                            }
                            else
                            {
                                <div class="header-title"
                             aria-live="polite" aria-atomic="true" tabindex="-1">
                                    <span id="@MonthAndYearId">@monthTitle</span>
                                </div>
                            }
                            <div class="navigation-btn-container">
                                <button class="navigation-btn"
                                    title="@($"Go to previous month")"
                                    aria-disabled="false"
                                    @onclick="() => HandleMonthChange(false)">
                                    <i class="bit-icon" aria-hidden="true"></i>
                                </button>
                                <button class="navigation-btn"
                                    title="@($"Go to next month")"
                                    aria-disabled="false"
                                    @onclick="() => HandleMonthChange(true)">
                                    <i class="bit-icon" aria-hidden="true"></i>
                                </button>
                            </div>
                        </div>
                        <table role="grid"
                           aria-readonly="true"
                           aria-multiselectable="false"
                           aria-labelledby="@MonthAndYearId"
                           aria-activedescendant="@ActiveDescendantId">
                            <tbody>
                                <tr>
                                    @if (CalendarType == BitCalendarType.Persian)
                                    {
                                        <th class="week-day-label" scope="col"
                                    title="@calendar?.GetDayOfWeekName(DayOfWeek.Saturday)">
                                            @calendar?.GetDayOfWeekName(DayOfWeek.Saturday)[0]
                                        </th>
                                    }
                                    <th class="week-day-label" scope="col"
                                    title="@calendar?.GetDayOfWeekName(DayOfWeek.Sunday)">
                                        @calendar?.GetDayOfWeekName(DayOfWeek.Sunday)[0]
                                    </th>
                                    <th class="week-day-label" scope="col"
                                    title="@calendar?.GetDayOfWeekName(DayOfWeek.Monday)">
                                        @calendar?.GetDayOfWeekName(DayOfWeek.Monday)[0]
                                    </th>
                                    <th class="week-day-label" scope="col"
                                    title="@calendar?.GetDayOfWeekName(DayOfWeek.Tuesday)">
                                        @calendar?.GetDayOfWeekName(DayOfWeek.Tuesday)[0]
                                    </th>
                                    <th class="week-day-label" scope="col"
                                    title="@calendar?.GetDayOfWeekName(DayOfWeek.Wednesday)">
                                        @calendar?.GetDayOfWeekName(DayOfWeek.Wednesday)[0]
                                    </th>
                                    <th class="week-day-label" scope="col"
                                    title="@calendar?.GetDayOfWeekName(DayOfWeek.Thursday)">
                                        @calendar?.GetDayOfWeekName(DayOfWeek.Thursday)[0]
                                    </th>
                                    <th class="week-day-label" scope="col"
                                    title="@calendar?.GetDayOfWeekName(DayOfWeek.Friday)">
                                        @calendar?.GetDayOfWeekName(DayOfWeek.Friday)[0]
                                    </th>
                                    @if (CalendarType is BitCalendarType.Gregorian)
                                    {
                                        <th class="week-day-label" scope="col"
                                    title="@calendar?.GetDayOfWeekName(DayOfWeek.Saturday)">
                                            @calendar?.GetDayOfWeekName(DayOfWeek.Saturday)[0]
                                        </th>
                                    }
                                </tr>
                                @for (var week = 0; week < 6; week++)
                                {
                                    if (monthWeeks[week, 0] == 0)
                                    {
                                        week = 0;
                                        break;
                                    }
                                    <tr>
                                        @for (var day = 0; day < 7; day++)
                                        {
                                            var localWeek = week;
                                            var localDay = day;
                                            <td class="@GetDateElClass(localDay,localWeek)" role="presentation"
                                    @onclick="() => HandleDateChoose(localDay, monthWeeks[localWeek, localDay], currentMonth)">
                                                <button role="gridcell"
                                            type="button"
                                            tabindex="@(IsDateSelected(localWeek, localDay, monthWeeks[localWeek, localDay]) ? 0 : -1)"
                                            aria-label="@GetDateAriaLabel(localWeek, localDay)"
                                            aria-selected="@(IsDateSelected(localWeek, localDay, monthWeeks[localWeek, localDay]) ? "true" : "false")"
                                            aria-readonly="true"
                                            aria-disabled="false">
                                                    <span aria-hidden="true">@monthWeeks[localWeek, localDay]</span>
                                                </button>
                                            </td>
                                        }
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="divider"></div>
                    <div class="month-picker-wrapper">
                        <div class="picker-header">
                            <button class="header-title"
                                aria-label="@($"{currentYear}, change year")"
                                tabindex="0"
                                type="button"
                                aria-atomic="true"
                                aria-live="polite"
                                @onclick="HandleMonthsShownChanged">
                                @currentYear
                            </button>
                            <div class="navigation-btn-container">
                                <button class="navigation-btn"
                                    aria-disabled="false"
                                    type="button"
                                    title="Go to previous year @(currentYear - 1)"
                                    @onclick="() => HandleYearChanged(false)">
                                    <i class="bit-icon" aria-hidden="true"></i>
                                </button>
                                <button class="navigation-btn"
                                    aria-disabled="false"
                                    type="button"
                                    title="Go to previous year @(currentYear + 1)"
                                    @onclick="() => HandleYearChanged(true)">
                                    <i class="bit-icon" aria-hidden="true"></i>
                                </button>
                            </div>
                        </div>
                        <div class="grid-container"
                         role="grid"
                         aria-label="@currentYear">
                            @for (var rowIndex = 0; rowIndex <= 2; rowIndex++)
                            {
                                <div class="btn-row" role="row">
                                    @for (var cellIndex = 1; cellIndex <= 4; cellIndex++)
                                    {
                                        var monthIndex = (rowIndex * 4) + cellIndex;
                                        <button role="gridcell"
                                                aria-selected="@(IsMonthSelected(monthIndex) ? "true" : "false")"
                                                aria-readonly="true"
                                                tabindex="0"
                                                type="button"
                                                aria-label="@calendar?.GetMonthName(monthIndex)"
                                                @onclick="() => HandleMonthChange(monthIndex)">
                                            <span aria-hidden="true">@calendar?.GetMonthShortName(monthIndex)</span>
                                        </button>
                                    }
                                </div>
                            }
                        </div>
                        <button class="go-today-btn"
                            type="button"
                            disabled="@IsGoTodayDisabeld()"
                            @onclick="HandleGoToToday">
                            @GoToToday
                        </button>
                    </div>
                </div>
                <div aria-hidden="true" tabindex="0" style="pointer-events: none; position: fixed;"></div>
            </div>
        </div>
    }
</div>