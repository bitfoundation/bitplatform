@namespace Bit.Client.Web.BlazorUI
@inherits BitComponentBase
<div @ref="RootElement"
     @attributes="HtmlAttributes"
     style="@StyleBuilder.Value"
     class="@ClassBuilder.Value">
    <input id="@UniqueId"
           type="radio"
           checked=@IsChecked
           name="@Name"
           value="@Value"
           hidden
           required="@(IsRequired is true)"
           @onclick="@HandleClick"
           @onchange="@HandleChange" />
    <label for="@UniqueId">
        <span>
            @Text
        </span>
    </label>
</div>