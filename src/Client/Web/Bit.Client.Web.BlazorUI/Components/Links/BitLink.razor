@namespace Bit.Client.Web.BlazorUI
@inherits BitComponentBase

<span @ref="RootElement"
      style="@StyleBuilder.Value"
      class="@ClassBuilder.Value">

    @if (Href.HasValue())
    {
        @if (IsEnabled)
        {
            <a class="@(HasUnderline ? "underlined" : "")"
               href="@Href"
               target="@Target">
                @ChildContent
            </a>
        }
        else
        {
            <a class="@(HasUnderline ? "underlined" : "")"
               aria-disabled="true">
                @ChildContent
            </a>
        }
    }
    else
    {
        @if (IsEnabled)
        {
            <button class="@(HasUnderline ? "underlined" : "")"
                    type="button"
                    @onclick="HandleClick"
                    @onclick:preventDefault="true">
                @ChildContent
            </button>
        }
        else
        {
            <button class="@(HasUnderline ? "underlined" : "")"
                    type="button"
                    aria-disabled="true"
                    disabled>
                @ChildContent
            </button>
        }
    }
</span>
