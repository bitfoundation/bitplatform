<Project Sdk="Microsoft.NET.Sdk">

	<Import Project="../../Bit.Build.props" />

	<PropertyGroup>
		<TargetFramework>net461</TargetFramework>
		<IsTool>true</IsTool>
		<PackageTags>$(PackageTags) Code-Generator Source-Generator MsBuild</PackageTags>
		<NoPackageAnalysis>true</NoPackageAnalysis>
		<BuildOutputTargetFolder>tasks</BuildOutputTargetFolder>
	</PropertyGroup>

	<ItemGroup>
		<Content Include="build\*" PackagePath="build\" />
		<Content Include="buildMultiTargeting\*" PackagePath="buildMultiTargeting\" />

		<None Include="$(OutputPath)\..\..\..\..\Bit.Tooling.CodeGenerator\bin\$(Configuration)\net6.0\Bit.Tooling.CodeGenerator.deps.json" Pack="true" PackagePath="implementation" Visible="false" />
		<None Include="$(OutputPath)\..\..\..\..\Bit.Tooling.CodeGenerator\bin\$(Configuration)\net6.0\Bit.Tooling.CodeGenerator.dll.config" Pack="true" PackagePath="implementation" Visible="false" />
		<None Include="$(OutputPath)\..\..\..\..\Bit.Tooling.CodeGenerator\bin\$(Configuration)\net6.0\Bit.Tooling.CodeGenerator.exe" Pack="true" PackagePath="implementation" Visible="false" />
		<None Include="$(OutputPath)\..\..\..\..\Bit.Tooling.CodeGenerator\bin\$(Configuration)\net6.0\Bit.Tooling.CodeGenerator.runtimeconfig.json" Pack="true" PackagePath="implementation" Visible="false" />
		<None Include="$(OutputPath)\..\..\..\..\Bit.Tooling.CodeGenerator\bin\$(Configuration)\net6.0\*.dll" Pack="true" PackagePath="implementation" Visible="false" />
		<None Include="$(OutputPath)\..\..\..\..\Bit.Tooling.CodeGenerator\bin\$(Configuration)\net6.0\runtimes\win\lib\netcoreapp3.0\*.dll" Pack="true" PackagePath="implementation\runtimes\win\lib\netcoreapp3.0" Visible="false" />
		<None Include="$(OutputPath)\..\..\..\..\Bit.Tooling.CodeGenerator\bin\$(Configuration)\net6.0\runtimes\win\lib\netstandard2.0\*.dll" Pack="true" PackagePath="implementation\runtimes\win\lib\netstandard2.0" Visible="false" />
		<PackageReference Include="Microsoft.Build.Utilities.Core" Version="17.3.1" PrivateAssets="All" />
		<PackageReference Remove="MSBuild.Sdk.Extras" PrivateAssets="All" />

	</ItemGroup>

</Project>
