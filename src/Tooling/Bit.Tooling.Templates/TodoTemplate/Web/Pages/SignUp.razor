@page "/sign-up"

@inherits ToDoTemplateComponentBase;

<PageTitle>Sign up</PageTitle>

<div class="page-container">
    <form class="form--white">
        @if (HasMessageBar)
        {
            <BitMessageBar Class="form-message-bar"
                       MessageBarType="@(IsSuccessMessageBar ? BitMessageBarType.Success : BitMessageBarType.Error)"
                       OnDismiss="() => HasMessageBar = false">
                @MessageBarText
            </BitMessageBar>
        }
        <h1 class="form-title">
            Create your free account
        </h1>
        <div class="form-input-container">
            <BitLabel>Email</BitLabel>
            <BitTextField Placeholder="Email" @bind-Value="Email" 
                          OnKeyUp="() => InvokeAsync(ValidateSignUp)"
                          OnFocus="() => EmailError = null" />
            <div class="form-input-error">@(EmailError ?? null)</div>
        </div>
        <div class="form-input-container">
            <BitLabel>Password</BitLabel>
            <BitTextField Type="BitTextFieldType.Password" CanRevealPassword="true" Placeholder="Password" @bind-Value="Password"
                          OnKeyUp="() => InvokeAsync(ValidateSignUp)"
                          OnFocus="() => PasswordError = null" />
            <div class="form-input-error">@(PasswordError ?? null)</div>
        </div>
        <BitCheckbox Class="form-checkbox" @bind-IsChecked="IsAcceptPrivacy" 
                     OnChange="() => InvokeAsync(ValidateSignUp)">
            Accept <BitLink Href="/privacy" Target="_blank">privacy and policy</BitLink>
        </BitCheckbox>
        <BitButton Class="form-submit-button" ButtonStyle="BitButtonStyle.Primary" IsEnabled="@(IsValidProperty)" OnClick="() => InvokeAsync(DoSignUp)">
           @if (IsLoading)
           {
               <BitSpinner Size="BitSpinnerSize.Small"></BitSpinner>
           }
           else
           {
               <span>Sign up</span>
           }
        </BitButton>
        <div>
            Already have an account? <BitLink Href="/sign-in">Sign in</BitLink>
        </div>
    </form>
</div>