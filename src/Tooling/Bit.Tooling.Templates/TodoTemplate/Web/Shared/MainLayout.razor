@inherits LayoutComponentBase

<Header OnToggleMenu=ToggleMenuHandler />

@if (IsUserAuthenticated)
{
    <NavMenu @bind-IsMenuOpen=IsMenuOpen />
}

<div class="main @(IsUserAuthenticated ? "main--authenticated" : null)">
    <div class="main-content">
        <ErrorBoundary @ref="ErrorBoundaryRef">
            <ChildContent>
                @Body
            </ChildContent>
            <ErrorContent Context="exception">
                <ErrorBoundaryContent Exception="exception" />
            </ErrorContent>
        </ErrorBoundary>
    </div>
    <Footer />
</div>