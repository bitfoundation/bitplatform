<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <IncludeContentInPack>true</IncludeContentInPack>
    <IncludeBuildOutput>false</IncludeBuildOutput>
    <ContentTargetFolders>content</ContentTargetFolders>
    <EnableDefaultItems>false</EnableDefaultItems>
    <NoDefaultExcludes>true</NoDefaultExcludes>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <PackageOutputPath>.</PackageOutputPath>  
  </PropertyGroup>

  <ItemGroup>
    <Content Include="TodoTemplate\**\*" Exclude="**\bin\**\*;**\obj\**\*;" />
    <Compile Remove="**\*" />
  </ItemGroup>

  <ItemGroup>
    <None Include="readme.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>


  <PropertyGroup>
    <PackageType>Template</PackageType>
    <Version>$(ReleaseVersion)</Version>
    <PackageId>Bit.Tooling.Templates.TodoTemplate</PackageId>
    <Title>Bit Platform TodoTemplate</Title>
    <Company>Bit Platform</Company>
    <Authors>Bit Platform</Authors>
    <Copyright>Bit © 2020</Copyright>
    <Description>A template for creating a Todo app base on the Bit-Platform</Description>
    <PackageTags>c#;asp.net;core;template;web;blazor</PackageTags>
    <PackageCopyright>Copyright © Bit Platform 2022</PackageCopyright>
    <PackageProjectUrl>https://github.com/bitfoundation/bitplatform</PackageProjectUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://github.com/bitfoundation/bitplatform</RepositoryUrl>
    <PackageReadmeFile>readme.md</PackageReadmeFile>
  </PropertyGroup>
</Project>