<LayoutView Layout="@typeof(MainLayout)">
    <Router AppAssembly="@GetType().Assembly"
            AdditionalAssemblies="@(AssemblyLoadContext.Default.Assemblies.Where(asm => asm.GetName().Name?.Contains("Websites.Sales") is true))">
        <Found Context="routeData">
            <RouteView RouteData="@routeData" />
        </Found>
        <NotFound>
            <PageNotFound />
        </NotFound>
        <Navigating>
            <LoadingComponent Color="#FFF" />
        </Navigating>
    </Router>
</LayoutView>