@inherits AppComponentBase

<BitModal @bind-IsOpen="isOpen">
    <div class="main">
        <div class="header">
            <span class="title">@title</span>
            <BitButton IconOnly IconName="@BitIconName.ChromeClose" OnClick="OnCloseClick" />
        </div>
        <div class="body">
            @body
        </div>
        <div class="footer">
            <BitButton OnClick="OnOkClick">OK</BitButton>
        </div>
    </div>
</BitModal>
