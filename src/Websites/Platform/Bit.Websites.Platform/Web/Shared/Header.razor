<header class="header">
    <div class="header-content-container">
        <div class="header-content">
            @if (CurrentUrl != "/")
            {
                <BitIconButton Class="header-menu-btn" IconName=BitIconName.CollapseMenu OnClick=@ToggleMenu AriaLabel="Header menu button" />
            }
            <a class="header-logo" href="/"></a>
        </div>
        <div class="header-content">
            <BitLink Href="/" Class="@GetHeaderLinkClass("Home")">Home</BitLink>
            <BitLink Href="/todo-template/overview" Class="@GetHeaderLinkClass("Templates")">Templates</BitLink>
            <a href="https://github.com/bitfoundation/bitplatform" target="_blank" class="header-github-link"></a>
        </div>
    </div>
</header>