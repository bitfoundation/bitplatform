@namespace Bit.Websites.Platform.Web

@inherits AppComponentBase

@if (isNavOpen)
{
    <div class="nav-menu-shadow nav-menu--mobile" @onclick="@WrapHandled(ToggleMenu)"></div>
}
<div class="nav-menu @(isNavOpen is false ? "nav-menu--desktop" : null)">
    <div class="search-box-container">
        <BitSearchBox Class="nav-menu-search-box"
                      Placeholder="Search"
                      IconName="BitIconName.Search"
                      IsUnderlined="true"
                      Value="@searchText"
                      ValueChanged="@HandleChange"
                      OnClear="@HandleClear" />
    </div>
    <div class="nav-menu-list">
        <BitNav Class="@GetNavMenuClass()"
                Items="filteredNavLinks"
                AriaLabel="Bit Component Nav"
                OnItemClick="@((BitNavItem item) => WrapHandled(() => HandleLinkClick(item)))">
        </BitNav>
    </div>
</div>