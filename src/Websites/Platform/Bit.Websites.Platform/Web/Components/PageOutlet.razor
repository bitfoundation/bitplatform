<PageTitle>@Title - Bit Platform</PageTitle>

<HeadContent>
    <meta name="title" content="@Title - Bit Platform" />
    <meta name="description" content="@Description" />

    <meta property="og:url" content="https://bitplatform.dev/@Url" />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Bit Platform" />
    <meta property="og:title" content="@Title - Bit Platform" />
    <meta property="og:description" content="@Description" />
    <meta property="og:image" content="@ImageUrl" />

    <meta name="twitter:title" content="@Title - Bit Platform" />
    <meta name="twitter:description" content="@Description" />
    <meta name="twitter:image" content="@ImageUrl" />
</HeadContent>

@code {
    [Parameter] public string? Title { get; set; }
    [Parameter] public string? Description { get; set; }
    [Parameter] public string? Url { get; set; }
    [Parameter] public string ImageUrl { get; set; } = "https://bitplatform.dev/images/og-image.svg";
}