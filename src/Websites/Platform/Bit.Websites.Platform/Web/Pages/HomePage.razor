@page "/"
@inherits AppComponentBase

<PageOutlet Url=""
            Title="Home"
            Description="home page of the bit platform" />

<div class="page-container">
    <section class="page-section hero-section">
        <div class="page-section-content">
            <div class="hero-section-content">
                <BitTypography Variant="BitTypographyVariant.H1" Gutter Class="hero-title">bit platform</BitTypography>
                <BitTypography Variant="BitTypographyVariant.H5" Gutter Style="font-weight: 300">
                     Create everything for everywhere using what you already know and love
                </BitTypography>
                @* <BitTypography Variant="BitTypographyVariant.Subtitle1">
                    Using what you already know with feature-rich project templates and high-performance components.
                </BitTypography> *@
            </div>
            <div class="hero-section-banner-container">
                <div class="hero-section-banner">
                    <img src="/images/home/banner.webp" />
                </div>
            </div>
        </div>
    </section>

    <section class="page-section intro-section">
        <div class="page-section-content">
            <BitTypography Variant="BitTypographyVariant.H3" Gutter>What is bit platform?</BitTypography>
            <BitTypography Variant="BitTypographyVariant.Subtitle1">
                bit is a platform for <b>.NET</b> developers to easily <b>Code, Build & Deploy</b> their projects across <span class="blue-txt">multiple platforms</span>.<br />
                Our mission is to make development easier.
            </BitTypography>
        </div>
    </section>

    <section class="page-section tech-section">
        <div class="page-section-content">
            <BitTypography Variant="BitTypographyVariant.H3" Gutter>Tech we use</BitTypography>
            <div class="tech-list">
                @* <a target="_blank" title=".NET" class="tech-item dotnet-item" href="https://dotnet.microsoft.com/en-us/"></a> *@
                <a target="_blank" title="C#" class="tech-item csharp-item" href="https://dotnet.microsoft.com/en-us/languages/csharp"></a>
                <a target="_blank" title="Blazor" class="tech-item blazor-item" href="https://dotnet.microsoft.com/en-us/apps/aspnet/web-apps/blazor"></a>
                <a target="_blank" title="Visual Studio" class="tech-item vs-item" href="https://visualstudio.microsoft.com/"></a>
                <a target="_blank" title="git" class="tech-item git-item" href="https://git-scm.com/"></a>
                <a target="_blank" title="GitHub" class="tech-item github-item" href="https://github.com"></a>
                <a target="_blank" title="Sass" class="tech-item sass-item" href="https://sass-lang.com/"></a>
            </div>
        </div>
    </section>

    <section class="page-section components-section">
        <div class="page-section-content">
            <BitTypography Variant="BitTypographyVariant.H3" Gutter>Components</BitTypography>
            <div class="components-container">
                <div class="components-content-container">
                    <BitTypography Variant="BitTypographyVariant.Subtitle1" Gutter>
                        bit BlazorUI is an intuitive, versatile, and high-performance component library that streamlines coding and enhances productivity.
                    </BitTypography>
                    <div class="com-item-list">
                        <div class="com-item">
                            <div class="com-item-content">
                                <div class="com-item-value">45</div>
                                <div class="com-item-name">Number of components</div>
                            </div>
                        </div>
                        <div class="com-item">
                            <div class="com-item-content">
                                <div class="com-item-value">53</div>
                                <div class="com-item-name">Open-source contributers</div>
                            </div>
                        </div>
                    </div>
                    <a class="com-link" href="@Urls.Components" target="_blank">Read more about BlazorUI <span class="com-link-arrow"></span></a>
                </div>
                <div class="image-container">
                    <a href="@Urls.Components" target="_blank" class="image-link" />
                </div>
            </div>
        </div>
    </section>

    <section class="page-section templates-section">
        <div class="page-section-content">
            <BitTypography Variant="BitTypographyVariant.H3" Gutter>Project templates</BitTypography>
            <BitTypography Variant="BitTypographyVariant.Subtitle1" Gutter>
                Coding templates based on .Net MAUI/Blazor that enable high-quality, speedy cross-platform development for Web, Android, iOS, macOS, Windows and Linux with pixel-perfect, ready-to-use UIs.
            </BitTypography>
            <div class="template-card-list">
                <div class="template-card">
                    <BitTypography Variant="BitTypographyVariant.H5" Gutter>TodoTemplate</BitTypography>
                    <div class="template-img-container">
                        <a href="@Urls.TodoTemplate">
                            <img class="template-img" src="/images/home/todotemplate.webp" alt="TodoTemplate" />
                        </a>
                    </div>
                    <BitTypography Variant="BitTypographyVariant.Body1" Gutter>
                        The TodoTemplate is built with ASP.NET Core, Identity, Web API, and EF Core for the server-side, and Blazor for the client-side.<br />
                        It allows you to build Android, iOS, macOS, Windows, Linux, and Web applications from a single codebase.
                    </BitTypography>
                    <div class="links-container">
                        <a class="template-link" href="@Urls.TodoTemplate">Learn more <span class="template-link-arrow"></span></a>
                        <BitButton Href="@Urls.TodoTemplatePwaPrerendered" Target="_blank">Demo</BitButton>
                    </div>
                </div>
                <div class="template-card">
                    <BitTypography Variant="BitTypographyVariant.H5" Gutter>AdminPanel</BitTypography>
                    <div class="template-img-container">
                        <a href="@Urls.AdminPanel">
                            <img class="template-img" src="/images/home/adminpanel.webp" alt="AdminPanel" />
                        </a>
                    </div>
                    <BitTypography Variant="BitTypographyVariant.Body1" Gutter>
                        The AdminPanel is built with ASP.NET Core, Identity, Web API, and EF Core for the server-side, and Blazor for the client-side.<br />
                        It allows you to build Android, iOS, macOS, Windows, Linux and Web applications from a single codebase
                    </BitTypography>
                    <div class="links-container">
                        <a class="template-link" href="@Urls.AdminPanel">Learn more <span class="template-link-arrow"></span></a>
                        <BitButton Href="@Urls.AdminPanelMultiLingual" Target="_blank">Demo</BitButton>
                    </div>
                </div>
            </div>
        </div>
    </section>

