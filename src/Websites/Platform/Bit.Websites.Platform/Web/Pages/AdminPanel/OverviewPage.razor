@page "/admin-panel"
@page "/admin-panel/overview"
@inherits AppComponentBase

<PageOutlet Url="admin-panel/overview"
            Title="Overview - AdminPanel"
            Description="overview of the admin panel template of the bit platform" />

<div class="page-container">
    <BitTypography Variant="BitTypographyVariant.H3" Gutter>AdminPanel</BitTypography>
    <div class="page-flex-container">
        <div class="page-content-container">
            <div class="image-container">
                <img class="template-img" src="/images/templates/admin/adminpanel.webp" alt="AdminPanel" />
                <a class="demo-btn-shadow" href="@Urls.AdminPanelMultiLingual" target="_blank">
                    <div class="demo-btn">Demo</div>
                </a>
            </div>
            <BitTypography Variant="BitTypographyVariant.H6" Gutter>Description</BitTypography>
            <BitTypography Variant="BitTypographyVariant.Body1">
                The AdminPanel is a project template that includes all the necessary parts to create a fully-featured admin/management website.
                This guide aims to help you create and run a bit platform admin panel project in a short time.
            </BitTypography>
        </div>

        <div class="page-content-container">
            <a class="primary-btn" href="@Urls.AdminPanelMultiLingual" target="_blank" title="SPA">SPA demo</a>
            <a class="secondary-btn" href="@Urls.AdminPanelGooglePlay" target="_blank" title="Google Play"><span class="btn-img google-play"></span>Android</a>
            <a class="secondary-btn" href="@Urls.AdminPanelTestFlight" target="_blank" title="Test Flight"><span class="btn-img test-flight"></span>Test Flight</a>
            <a class="secondary-btn" href="@Urls.AdminPanelNuget" target="_blank" title="Nuget"><span class="btn-img nuget"></span>Nuget</a>
            <a class="secondary-btn" href="@Urls.AdminPanelFigma" target="_blank" title="Figma"><span class="btn-img figma"></span>Figma</a>
        </div>
    </div>
</div>

<NavigationButtons Next="Development prerequisites" NextUrl="/admin-panel/development-prerequisites" />
