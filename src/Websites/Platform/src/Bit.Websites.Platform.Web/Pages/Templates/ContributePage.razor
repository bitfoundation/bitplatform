@page "/todo-template/contribute"
@page "/admin-panel/contribute"
@page "/templates/contribute"
@inherits AppComponentBase

<PageOutlet Url="templates/contribute"
            Title="Contribute - Templates"
            Description="how to contribute to the project templates of the bit platform" />

<div class="page-container">
    <BitTypography Variant="BitTypographyVariant.H3" Gutter>Contribute</BitTypography>
    <br />
    <BitTypography Variant="BitTypographyVariant.Subtitle1" Gutter>
        There are many ways to contribute in the bit platform projects:
    </BitTypography>
    <br />

    <section class="section-card">
        <div class="section-card-txt">
            🔯 Give us a try and use bit platform nuget packages in your apps!
        </div>
        <div class="section-card-txt">
            🔯 <a target="_blank" href="https://github.com/bitfoundation/bitplatform/pulls">Code review</a>
        </div>
        <div class="section-card-txt">
            🔯 Fork/Star this project on the GitHub 😉
        </div>
        <div class="section-card-txt">
            🔯 Submit <a href="https://github.com/bitfoundation/bitplatform/issues/new?template=bug_report.yml">bugs</a> &amp; <a href="https://github.com/bitfoundation/bitplatform/issues/new?template=feature_request.yml">feature requests</a>
        </div>
        <div class="section-card-txt">
            🔯 Engage with other developers on <a target="_blank" href="https://stackoverflow.com/questions/tagged/bitplatform">Stack Overflow</a>
        </div>
    </section>
</div>

<NavigationButtons Prev="Platform integration" PrevUrl="/templates/platform-integration" />