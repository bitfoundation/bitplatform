            <a href="https://www.trustpilot.com/review/bitplatform.dev" target="_blank" rel="noopener">Trustpilot</a>
            </div>*@
            <!-- End TrustBox widget -->
        </div>
    </section>

    <section class="page-section quickstart-section" id="@QUICK_START_SECTION_ID" @ref="quickStartRef">
        <div class="page-section-content">
            <BitTypography Variant="BitTypographyVariant.H3" Gutter>Quick start</BitTypography>
            <BitTypography Variant="BitTypographyVariant.Subtitle1" Gutter>Quickly start with the bit platform products & tools</BitTypography>
            <div class="quickstart-links">
                <BitCompoundButton Id="blazorui-button"
                                   Href="https://components.bitplatform.dev/getting-started"
                                   ButtonStyle="BitButtonStyle.Standard">
                    <PrimaryTemplate>
                        <BitTypography Variant="BitTypographyVariant.H5">BlazorUI</BitTypography>
                    </PrimaryTemplate>
                    <SecondaryTemplate>
                        <BitTypography Variant="BitTypographyVariant.Body2" Style="display:flex;align-items:center">
                            Utilize bit BlazorUI components for your new project
                        </BitTypography>
                    </SecondaryTemplate>
                </BitCompoundButton>
                <BitCompoundButton Id="template-button"
                                   Href="https://bitplatform.dev/templates/overview"
                                   ButtonStyle="BitButtonStyle.Standard">
                    <PrimaryTemplate>
                        <BitTypography Variant="BitTypographyVariant.H5">Project templates</BitTypography>
                    </PrimaryTemplate>
                    <SecondaryTemplate>
                        <BitTypography Variant="BitTypographyVariant.Body2" Style="display:flex;align-items:center">
                            Build your next app with a full-featured template
                        </BitTypography>
                    </SecondaryTemplate>
                </BitCompoundButton>
            </div>
        </div>
    </section>
</div>
