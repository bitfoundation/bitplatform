                        </BitPivotItem>
                        <BitPivotItem HeaderText="Result">
                            <br />
                            <div>Open the DevTools console and start clicking on the button</div>
                            <br />
                            <BitButton OnClick="CreateGroupLogs">Create group logs</BitButton>
                            <br />
                        </BitPivotItem>
