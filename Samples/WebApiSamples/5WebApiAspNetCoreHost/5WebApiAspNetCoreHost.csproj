    <RootNamespace>WebApiAspNetCoreHost</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Bit.OwinCore" Version="1.0.7" />
    <PackageReference Include="Bit.WebApi" Version="1.0.7" />
    <PackageReference Include="BitCodeAnalyzer" Version="1.2.6.2" />
    <PackageReference Include="SourceLink.Copy.PdbFiles" Version="2.8.3" PrivateAssets="All" />
  </ItemGroup>
  <ItemGroup>
    <Content Update="environments.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

</Project>
