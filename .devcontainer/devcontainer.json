{
    "name": "bit platform",
    "hostRequirements": {
        "cpus": 4
    },
    "image": "docker pull mcr.microsoft.com/dotnet/sdk:8.0.302-1-jammy",
    "onCreateCommand": "find . -type f -name '*.csproj' -exec sed -i 's/Microsoft.NET.Sdk.BlazorWebAssembly/Microsoft.NET.Sdk.Web/g' {} \\;",
    "waitFor": "onCreateCommand",
    "customizations": {
        "codespaces": {
            "openFiles": [
                "CONTRIBUTING.md"
            ]
        },
        "vscode": {
            "extensions": [
                "glenn2223.live-sass"
            ]
        }
    },
    "forwardPorts": [
        4000,
        4001,
        5000,
        5001,
        4030,
        4031,
        4040,
        4041,
        5030,
        5031,
        5040,
        5041
    ],
    "remoteEnv": {
        "ASPNETCORE_ENVIRONMENT": "Development"
    }
}