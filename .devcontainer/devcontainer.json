{
    "name": "bit platform",
    "hostRequirements": {
        "cpus": 4
    },
    "image": "mcr.microsoft.com/dotnet/sdk:8.0.302-1-jammy",
    "features": {
        "ghcr.io/devcontainers/features/node:1": {}
    },
    "onCreateCommand": "dotnet dev-certs https --trust && find . -type f -name '*.csproj' -exec sed -i 's/Microsoft.NET.Sdk.BlazorWebAssembly/Microsoft.NET.Sdk.Web/g' {} \\;",
    "onPostCreateCommand": "dotnet build src/BlazorUI/Bit.BlazorUI.sln -t:BeforeBuildTasks -m:1",
    "waitFor": "onCreateCommand",
    "customizations": {
        "codespaces": {
            "openFiles": [
                "CONTRIBUTING.md"
            ]
        }
    },
    "forwardPorts": [
        4000,
        4001,
        5000,
        5001,
        4030,
        4031,
        4040,
        4041,
        5030,
        5031,
        5040,
        5041
    ],
    "remoteEnv": {
        "ASPNETCORE_ENVIRONMENT": "Development"
    }
}